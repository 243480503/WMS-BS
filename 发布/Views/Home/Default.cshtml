        }

        //获取列表数据
        function GetListData() {
            $.ajaxWMS({
                url: "/Home/GetListData",
                data: {},
                dataType: "json",
                type: "Get",
                async: false,
                success: function (data) {
                    if (data.orderAllList.length > 0) {
                        $.each(data.orderAllList, function (i, n) {
                            $("#OrderList").append(' <li><span style="cursor:pointer">[' + n.OrderTypeName + ']        ' + n.OrderCode + '      [' + n.StateName + ']</span><span class="time">' + n.CreateDate + '</span></li>');
                        });
                    }
                    else {
                        $("#OrderList").append(' <li><span style="cursor:pointer">无单据</span></li>');
                    }

                    if (data.taskList.length > 0) {
                        $.each(data.taskList, function (i, n) {
                            $("#TaskList").append(' <li><span style="cursor:pointer">' + n.TaskNo + '      [' + n.StateName + ']</span><span class="time">' + n.F_CreatorTime + '</span></li>');
                        });
                    } else {
                        $("#TaskList").append(' <li><span style="cursor:pointer">当前无任务</span></li>');
                    }

                    if (data.msgList.length > 0) {
                        $.each(data.msgList, function (i, n) {
                            var msg = n.Msg == null ? " " : n.Msg;
                            if (msg.length > 30) {
                                msg = msg.substring(0,25)+"...";
                            }
                            $("#MsgList").append(' <li><span style="cursor:pointer" title="' + n.Msg + '">' + msg + '</span><span class="time">' + n.F_CreatorTime + '</span></li>');
                        }); 
                    } else {
                        $("#TaskList").append(' <li><span style="cursor:pointer">无消息</span></li>');
                    }
                }
            });
        }
    </script>
