        function GetSalaryChart(MonthInOut) {
            var InBoundList = [];
            var OutBoundList = [];
            var GetSampleList = [];
            var BackSampleList = [];
            var CountInList = [];
            var CountOutList = [];
            var MonthList = [];

            $.each(MonthInOut.InBound, function (i, n) {
                InBoundList.push(n.SumQty);
            });

            $.each(MonthInOut.OutBound, function (i, n) {
                OutBoundList.push(n.SumQty);
            });

            $.each(MonthInOut.GetSample, function (i, n) {
                GetSampleList.push(n.SumQty);
            });

            $.each(MonthInOut.BackSample, function (i, n) {
                BackSampleList.push(n.SumQty);
            });

            $.each(MonthInOut.CountIn, function (i, n) {
                CountInList.push(n.SumQty);
            });

            $.each(MonthInOut.CountOut, function (i, n) {
                CountOutList.push(n.SumQty);
            });

            $.each(MonthInOut.Month, function (i, n) {
                MonthList.push(n.Month + "月");
            });

            var lineChartData = {
                labels: MonthList,
                datasets: [
                    {
                        label: "InBound",
                        fillColor: "rgba(252,134,117,0.2)",
                        strokeColor: "rgba(252,134,117,1)",
                        pointColor: "rgba(252,134,117,1)",
                        pointStrokeColor: "#fff",
                        pointHighlightFill: "#fff",
                        pointHighlightStroke: "rgba(252,134,117,1)",
                        data: InBoundList
                    },
                    {
                        label: "OutBound",
                        fillColor: "rgba(107,175,189,0.2)",
                        strokeColor: "rgba(107,175,189,1)",
                        pointColor: "rgba(107,175,189,1)",
                        pointStrokeColor: "#fff",
                        pointHighlightFill: "#fff",
                        pointHighlightStroke: "rgba(107,175,189,1)",
                        data: OutBoundList
                    },
                    {
                        label: "GetSample",
                        fillColor: "rgba(243,206,133,0.2)",
                        strokeColor: "rgba(243,206,133,1)",
                        pointColor: "rgba(243,206,133,1)",
                        pointStrokeColor: "#fff",
                        pointHighlightFill: "#fff",
                        pointHighlightStroke: "rgba(243,206,133,1)",
                        data: GetSampleList
                    },
                    {
                        label: "BackSample",
                        fillColor: "rgba(255,228,174,0.2)",
                        strokeColor: "rgba(255,228,174,1)",
                        pointColor: "rgba(255,228,174,1)",
                        pointStrokeColor: "#fff",
                        pointHighlightFill: "#fff",
                        pointHighlightStroke: "rgba(255,228,174,1)",
                        data: BackSampleList
                    },
                    {
                        label: "CountIn",
                        fillColor: "rgba(148,159,177,0.2)",
                        strokeColor: "rgba(148,159,177,1)",
                        pointColor: "rgba(148,159,177,1)",
                        pointStrokeColor: "#fff",
                        pointHighlightFill: "#fff",
                        pointHighlightStroke: "rgba(148,159,177,1)",
                        data: CountInList
                    },
                    {
                        label: "CountOut",
                        fillColor: "rgba(185,196,213,0.2)",
                        strokeColor: "rgba(185,196,213,1)",
                        pointColor: "rgba(185,196,213,1)",
                        pointStrokeColor: "#fff",
                        pointHighlightFill: "#fff",
                        pointHighlightStroke: "rgba(185,196,213,1)",
                        data: CountOutList
                    }
                ]
            }
            var ctx = document.getElementById("salarychart").getContext("2d");
            window.myLine = new Chart(ctx, {
                options: {
                    tooltips: {
                        callbacks: {
                            label: function (tooltipItem, data) {
                                var label = data.datasets[tooltipItem.datasetIndex].label || '';

                                if (label) {
                                    label += ': ';
                                }
                                label += Math.round(tooltipItem.yLabel * 100) / 100;
                                return label;
                            }
                        }
                    }
                }
            }).Line(lineChartData, {
                responsive: false,
                bezierCurve: false
            });
        }

        function GetLeaveChart(TaskHis) {
            var a_value = TaskHis.TaskHisIn;
            var b_value = TaskHis.TaskHisOut;
            var c_value = TaskHis.TaskHisQA;
            var d_value = TaskHis.TaskHisCount;
            var doughnutData = [
