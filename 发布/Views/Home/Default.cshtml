            $("#a_value").html(a_value);
            $("#b_value").html(b_value);
            $("#c_value").html(c_value);
            $("#d_value").html(d_value);
        }

        function GetLocChart(LocInfo) {
            var a_value = LocInfo.EmptyBigCount;//空货位(大)
            var b_value = LocInfo.NotEmptyBigCount;//已占用(大)
            var c_value = LocInfo.EmptyCount;  //空货位(中)
            var d_value = LocInfo.NotEmptyCount;//已占用(中)
            var e_value = LocInfo.EmptySmallCount; //空货位(小)
            var f_value = LocInfo.NotEmptySmallCount; //已占用(小)
            var doughnutData = [
                {
                    value: a_value,
                    color: "#F7464A", 
                    highlight: "#FF5A5E",
                    label: "空货位(大)"
                },
                {
                    value: b_value,
                    color: "#46BFBD",
                    highlight: "#5AD3D1",
                    label: "已占用(大)"
                },
                {
                    value: c_value,
                    color: "#FDB45C",
                    highlight: "#FFC870",
                    label: "空货位(中)"
                },
                {
                    value: d_value,
                    color: "#949FB1",
                    highlight: "#A8B3C5",
                    label: "已占用(中)"
                },
                {
                    value: e_value,
                    color: "#b8de70",
                    highlight: "#ABCE68",
                    label: "空货位(小)"
                },
                {
                    value: f_value,
                    color: "#a7c7fb",
                    highlight: "#91b7f5",
                    label: "已占用(小)"
                }
            ];
            var ctx = document.getElementById("chart_loc").getContext("2d");
            window.myDoughnut = new Chart(ctx).Doughnut(doughnutData, { responsive: true });

            $("#a_locvalue").html(a_value + "(个)");
