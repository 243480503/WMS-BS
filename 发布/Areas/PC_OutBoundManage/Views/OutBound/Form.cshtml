@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/PC_OutBoundManage/OutBound/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $.checkLogin(data);
                    $("#form1").formSerialize(data);
                    $("#State").attr("disabled", "disabled");
                    if ($("#State").val() != 'New') {
                        $("#form1").find('.form-control,select,input').attr('disabled', 'readonly');
                    }


                    var orderType = $("#OutBoundType").val();
                    if (orderType == "GetItemOut") { //领料出库有紧急出库
                        $("#IsUrgentTR").show();
                    }
                    else {
                        $("#IsUrgentTR").hide();
                    }

                    if (orderType == "VerBackOut") {  //验退出库有入库单
                        $("#QAIDRow").show();
                    }
                    else {
                        $("#QAIDRow").hide();
                    }
                }
            });
        }
        else {
            $.ajax({
                url: "/PC_OutBoundManage/OutBound/GenNum",
                data: { ruleCode: "OutBoundRule" },
                dataType: "json",
                async: false,
                success: function (data) {
                    $.checkLogin(data);
                    var dataSer = { "OutBoundCode": data.Code, "State": "New" };
                    $("#form1").formSerialize(dataSer);
                    $("#State").attr("disabled", "disabled");
                }
            });
        }

        $("#OutBoundType").change(function () {
            var orderType = $("#OutBoundType").val();
            if (orderType == "GetItemOut") { //领料出库有紧急出库
                $("#IsUrgentTR").show();
            }
            else {
                $("#IsUrgent").prop("checked", false);
                $("#IsUrgentTR").hide();
            }

            if (orderType == "VerBackOut") {  //验退出库有入库单
                $("#QAIDRow").show();
            }
            else {
                $("#QAID").get(0).selectedindex = 0;//index为索引值; //清除指定的入库单
                $("#QAIDRow").hide();
            }
        });

        $("#QAID").change(function () {
            var qaId = $("#QAID").select2().val();
            if (qaId == "") {
                $("#PointInBoundCode").val("");
            }
            else {
                $.ajax({
                    url: "/PC_OutBoundManage/OutBound/GetQAInBoundJson",
                    data: { qaId: qaId },
                    dataType: "json",
                    async: false,
                    success: function (data) {
                        $.checkLogin(data);
                        $("#PointInBoundCode").val(data.InBoundCode);
                    }
                });
            }
        });
    });

    function initControl() {
        $("#State").bindSelect({
            url: "/SystemManage/ItemsData/GetDicList?entityName=T_OutBound&fieldName=State",
            id: "F_ItemCode",
            text: "F_ItemName"
        });


        $("#OutBoundType").bindSelect({
            url: "/SystemManage/ItemsData/GetDicList?entityName=T_OutBound&fieldName=OutBoundType",
            id: "F_ItemCode",
            text: "F_ItemName"
        });

        $("#ReceiveDepartmentId").bindSelect({
            url: "/PC_OutBoundManage/OutBound/GetDepartmentList",
            id: "F_Id",
            text: "F_FullName",
            search: true
        });

        $("#ReceiveUserId").bindSelect({
            url: "/PC_OutBoundManage/OutBound/GetUserList",
            id: "F_Id",
            text: "F_RealName",
            search: true
        });

        $("#QAID").bindSelect({
            url: "/PC_OutBoundManage/OutBound/GetQAGridJson",
            id: "F_Id",
            text: "RefOrderCode",
            search: true
        });
    }

    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }

        $.submitForm({
            url: "/PC_OutBoundManage/OutBound/SubmitForm?keyValue=" + keyValue,
            param: $("#form1").formSerialize(),
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            },
            error: function (data) {
                $.modalMsg(data.message, data.state);
            }
        })
    }
</script>

<form id="form1">
    <div style="padding-top: 20px; margin-right: 20px;">
        <table class="form">
            <tr>
                <th class="formTitle">出库单编码</th>
                <td class="formValue">
                    <input id="OutBoundCode" name="OutBoundCode" readonly="readonly" type="text" class="form-control required" placeholder="输入出库单编码" />
                </td>
                <th class="formTitle">来源单号</th>
                <td class="formValue">
                    <input id="RefOrderCode" name="RefOrderCode" type="text" class="form-control" placeholder="请入出库来源单号" />
                </td>

            </tr>
            <tr>
                <th class="formTitle">出库单状态</th>
                <td class="formValue">
                    <select id="State" name="State" class="form-control required">
                        <option value="">==请选择==</option>
                    </select>
                </td>
                <th class="formTitle">单据类型</th>
                <td class="formValue">
                    <select id="OutBoundType" name="OutBoundType" class="form-control required">
                        <option value="">==请选择==</option>
                    </select>
                </td>
            </tr>
            <tr id="QAIDRow" style="display:none;">
                <th class="formTitle">质检单</th>
                <td class="formValue">
                    <select id="QAID" name="QAID" class="form-control required">
                        <option value="">==请选择==</option>
                    </select>
                </td>
                <th class="formTitle">入库单编码</th>
                <td class="formValue">
                    <input id="PointInBoundCode" name="PointInBoundCode" type="text" readonly="readonly" class="form-control" placeholder="质检对应入库单编码" />
                </td>
            </tr>
            <tr>
                <th class="formTitle">接收部门</th>
                <td class="formValue">
                    <select id="ReceiveDepartmentId" name="ReceiveDepartmentId" class="form-control">
                        <option value="">==请选择==</option>
                    </select>
                </td>
                <th class="formTitle">接收人</th>
                <td class="formValue">
                    <select id="ReceiveUserId" name="ReceiveUserId" class="form-control">
                        <option value="">==请选择==</option>
                    </select>
                </td>
            </tr>
            <tr>
                <th class="formTitle">备注</th>
                <td class="formValue" colspan="3">
                    <textarea id="Remark" name="Remark" class="form-control" style="height: 60px;"></textarea>
                </td>
            </tr>
            <tr id="IsUrgentTR">
                <th class="formTitle">选项</th>
                <td class="formValue">
                    <div class="ckbox">
                        <input id="IsUrgent" name="IsUrgent" type="checkbox"><label for="IsUrgent">是否紧急</label>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</form>
