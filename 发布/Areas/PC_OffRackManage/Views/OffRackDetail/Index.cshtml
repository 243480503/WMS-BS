@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<style>
    .tablediv {
        margin: 30px 40px 0px 0px;
    }

    .ui-sghref > .glyphicon.glyphicon-triangle-right {
        padding-top: 8px;
    }

    .ui-sghref > .glyphicon.glyphicon-triangle-bottom {
        padding-top: 8px;
    }
</style>
<script>
    var OffRackID = $.request("keyvalue");
    $(function () {
        gridList();
    })

    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/PC_OffRackManage/OffRackDetail/GetGridJson?OffRackID=" + OffRackID,
            height: $(window).height() - 126,
            colModel: [
                { label: '主键', name: "F_Id", hidden: true, key: true },
                { label: '下架单ID', name: 'OffRackID', hidden: true },
               /* { label: '项次', name: 'SEQ', width: 100, align: 'left', sorttype: 'float' },*/
                { label: '区域名称', name: 'AreaName', width: 100, align: 'left' },
                { label: '下架货位ID', name: 'LocationID', hidden: true, width: 100, align: 'left' },
                { label: '下架货位编码', name: 'LocationCode', width: 150, align: 'left' },
                { label: '容器条码', name: 'BarCode', width: 150, align: 'left' },
                {
                    label: '到达站台', name: 'StationCode', width: 150, align: 'left',
                    formatter: function (cellvalue, options, rowObject) {
                        if (rowObject.StationCode == "StationOut_Normal") { //出库站台(正常)
                            return '<span class=\"label label-success\">' + rowObject.StationName + '</span>';
                        } else if (rowObject.StationCode == "StationOut_BigItem") { //出库站台(大件)
                            return '<span class=\"label label-info\">' + rowObject.StationName + '</span>';
                        }
                        else {
                            return cellvalue;
                        }
                    }
                },
                { label: '状态', name: 'State', width: 100, align: 'left', formatter: function (cellvalue, options, rowObject) { return rowObject.StateName; } },
                //{ label: "创建时间", name: "F_CreatorTime", width: 150, align: 'left' },
                //{ label: "创建人", name: "CreatorUserName", width: 100, align: 'left' },
            ],
            pager: "#gridPager",
            sortname: 'SEQ asc',
            viewrecords: true,
            rowNum: 10
        });

        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val() },
            }).trigger('reloadGrid', { fromServer: true, page: 1 });
        });
    }

    $(window).bind('resize', function () {
        $("#gridList").setGridWidth($(window).width());
        $("#gridList").setGridHeight($(window).height() - 126);
    });

    function btn_add() {
        $.modalFixHightOpen({
            id: "Form",
            title: "明细维护",
            url: "/PC_OffRackManage/OffRackDetail/TransferForm?OffRackID=" + OffRackID,
            width: "1400px",
            height: "800px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm(function () {
                    $("#gridList").trigger("reloadGrid");
                });
            }
        });
    }

    function btn_edit() {
        var keyValue = $("#gridList").jqGridRowValue().F_Id;
        $.modalFixHightOpen({
            id: "Form",
            title: "修改明细",
            url: "/PC_OffRackManage/OffRackDetail/TransferForm?OffRackID=" + OffRackID + "&keyValue=" + keyValue,
            width: "1400px",
            height: "800px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }

    function btn_delete() {
        $.deleteForm({
            url: "/PC_OffRackManage/OffRackDetail/DeleteForm",
            param: { keyValue: $("#gridList").jqGridRowValue().F_Id },
            success: function () {
                $("#gridList").trigger("reloadGrid");
            }
        })
    }
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="NF-add-detail" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i>明细维护</a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
                <li><a id="NF-edit-detail" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改明细</a></li>
                <li><a id="NF-delete-detail" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除明细</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="货位编码" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>
