@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}

<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/PC_OffRackManage/OffRack/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data);
                    $("#State").attr("disabled", "disabled");
                    if ($("#State").val() != 'New') {
                        $("#form1").find('.form-control,select,input').attr('disabled', 'readonly');
                    }
                }
            });
        }
        else {
            $.ajax({
                url: "/PC_OffRackManage/OffRack/GenNum",
                data: { ruleCode: "OffRackRule" },
                dataType: "json",
                async: false,
                success: function (data) {
                    var dataSer = { "OffRackCode": data.Code, "State": "New"};
                    $("#form1").formSerialize(dataSer);
                    $("#State").attr("disabled", "disabled");
                }
            });
        }
    });

    function initControl() {

        $("#AreaID").bindSelect({
            url: "/PC_BaseDataManage/Item/GetMainAreaDicList",
            id: "F_Id",
            text: "AreaName",
            search: false
        });

        $("#OffRackMethod").bindSelect({
            url: "/SystemManage/ItemsData/GetDicList?entityName=T_OffRack&fieldName=OffRackMethod",
            id: "F_ItemCode",
            text: "F_ItemName"
        });

        $("#State").bindSelect({
            url: "/SystemManage/ItemsData/GetDicList?entityName=T_OffRack&fieldName=State",
            id: "F_ItemCode",
            text: "F_ItemName"
        });
    }

    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        $.submitForm({
            url: "/PC_OffRackManage/OffRack/SubmitForm?keyValue=" + keyValue,
            param: $("#form1").formSerialize(),
            success: function (data) {
                $.modalAlert(data.message, data.state);
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            },
            error: function (data) {
                $.modalMsg(data.message, data.state);
            }
        })
    }
</script>

<form id="form1">
    <div style="padding-top: 20px; margin-right: 20px;">
        <table class="form">
            <tr>
                <th class="formTitle">下架单编码</th>
                <td class="formValue">
                    <input id="OffRackCode" name="OffRackCode" readonly="readonly" type="text" class="form-control required" placeholder="请输入下架单编码" />
                </td>
                <th class="formTitle">下架单状态</th>
                <td class="formValue">
                    <select id="State" name="State" class="form-control required">
                        <option value="">==请选择==</option>
                    </select>
                </td>
            </tr>
            <tr>
                <th class="formTitle">下架区域</th>
                <td class="formValue">
                    <select id="AreaID" name="AreaID" class="form-control required">
                        <option value="">==请选择==</option>
                    </select>
                </td>
                <th class="formTitle">下架方式</th>
                <td class="formValue">
                    <select id="OffRackMethod" name="OffRackMethod" class="form-control required">
                        <option value="">==请选择==</option>
                    </select>
                </td>
            </tr>
            <tr>
                <th class="formTitle">备注</th>
                <td class="formValue" colspan="3">
                    <textarea id="Remark" name="Remark" class="form-control" style="height: 60px;"></textarea>
                </td>
            </tr>
        </table>
    </div>
</form>