@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}

<style>
    .tablediv {
        margin: 30px 40px 0px 0px;
    }

    .ui-sghref > .glyphicon.glyphicon-triangle-right {
        padding-top: 8px;
    }

    .ui-sghref > .glyphicon.glyphicon-triangle-bottom {
        padding-top: 8px;
    }
</style>

<script>
    $(function () {
        gridList();
    })

    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/PC_ReportManage/InventoryReport/GetGridJson",
            height: $(window).height() - 128,
            colModel: [
                { label: "主键", name: "F_Id", hidden: true, key: true },
                { label: '物料编码', name: 'ItemCode', width: 150, align: 'left' },
                { label: '物料名称', name: 'ItemName', width: 280, align: 'left' },
                { label: '生产厂家', name: 'Factory', width: 250, align: 'left' },
                { label: '规格', name: 'Spec', width: 150, align: 'left' },
                { label: '批号', name: 'Lot', width: 150, align: 'left' },
                { label: '库存数量', name: 'SumQty', width: 80, align: 'left' },
                { label: '计量单位', name: 'ItemUnitText', width: 80, align: 'left' },
                { label: '失效日期', name: 'OverdueDate', width: 100, align: 'left', formatter: "date", formatoptions: { newformat: 'Y-m-d' } },
                { label: '质检状态', name: 'CheckStateName', width: 120, align: 'center', sortable: false },
                { label: '容器大类', name: 'ContainerKindName', width: 80, align: 'left', sortable: false },
                { label: '容器数量', name: 'Count', width: 80, align: 'left' },
            ],
            pager: "#gridPager",
            sortname: 'ItemCode asc',
            viewrecords: true,
            rowNum: 999999,
            footerrow: true,//设置属性，显示统计行
            gridComplete: function () {
                var rows = $gridList.jqGrid("getRowData");
                var sumTotal = 0;
                var countTotal = 0;
                for (var i = 0; i < rows.length; i++) {
                    sumTotal = parseInt(rows[i].SumQty) + sumTotal;
                    countTotal = parseInt(rows[i].Count) + countTotal;
                }
                $gridList.jqGrid("footerData", "set", { ItemCode: "合计：", SumQty: sumTotal, Count: countTotal });
            }
        });

        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val() },
            }).trigger('reloadGrid', { fromServer: true, page: 1 });
        });
    }

    $(window).bind('resize', function () {
        $("#gridList").setGridWidth($(window).width());
        $("#gridList").setGridHeight($(window).height() - 126);
    });

    function btn_details() {
        var keyValue = $("#gridList").jqGridRowValue().F_Id;
        $.modalOpen({
            id: "Details",
            title: "查看明细",
            url: "/PC_ReportManage/InventoryReport/DetailsList?keyValue=" + keyValue,
            width: "1500px",
            height: "980px",
            btn: null,
        });
    }

    function btn_down() {
        var postdata = {};
        if ($('[name=__RequestVerificationToken]').length > 0) {
            postdata["__RequestVerificationToken"] = $('[name=__RequestVerificationToken]').val();
        }
        $.ajax({
            url: "/PC_ReportManage/InventoryReport/InventoryDownFile",
            data: postdata,
            dataType: "json",
            type: "Get",
            async: false,
            success: function (data) {
                $("body").append($("<iframe/>").css("display","none").attr("src", data.Path));
            }
        });
    }
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="NF-add-down" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_down()"><i class="fa fa-download"></i>下载</a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
                <li><a id="NF-Details" authorize="yes" onclick="btn_details()"><i class="fa fa-search-plus"></i>查看明细</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="物料编码 / 物料名称 / 批号" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    @*<div id="gridPager"></div>*@
</div>
