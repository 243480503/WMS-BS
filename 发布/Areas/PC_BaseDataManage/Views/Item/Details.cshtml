            <tr>
                <th class="formTitle">存放区域</th>
                <td class="formValue">
                    <select name="StoredAreaList" id="StoredAreaList" class="form-control required">
                        <option value="">==请选择==</option>
                    </select>
                </td>
                <th class="formTitle">入库站台</th>
                <td class="formValue">
                    <select name="InStationList" id="InStationList" class="form-control required">
                        <option value="">==请选择==</option>
                    </select>
                </td>
            </tr>
            <tr>
                <th class="formTitle">选项</th>
                <td class="formValue" colspan="3">
                    <div class="ckbox">
                        <input id="IsNeedCheck" name="IsNeedCheck" type="checkbox"><label for="IsNeedCheck">需质检</label>
                    </div>
                    <div class="ckbox" style="display:none;">
                        <input id="IsBroken" name="IsBroken" type="checkbox"><label for="IsBroken">破坏性质检</label>
                    </div>
                    <div class="ckbox">
                        <input id="IsSpecial" name="IsSpecial" type="checkbox"><label for="IsSpecial">关键物料</label>
                    </div>
                    <div class="ckbox">
                        <input id="IsMustLot" name="IsMustLot" type="checkbox"><label for="IsMustLot">批号控制</label>
                    </div>
                    <div class="ckbox">
                        <input id="IsDampproof" name="IsDampproof" type="checkbox"><label for="IsDampproof">防潮</label>
                    </div>
                    <div class="ckbox">
                        <input id="IsPriority" name="IsPriority" type="checkbox"><label for="IsPriority">靠窗优先</label>
                    </div>
                    <div class="ckbox">
                        <input id="IsItemMark" name="IsItemMark" type="checkbox"><label for="IsItemMark">需贴标</label>
                    </div>
                    <div class="ckbox">
                        <input id="IsBase" name="IsBase" sysbasedata="yes" type="checkbox" checked="checked"><label for="IsBase">系统数据</label>
                    </div>
                </td>
            </tr>
            <tr>
                <th class="formTitle">创建人员</th>
                <td class="formValue">
                    <input id="CreatorUserName" name="CreatorUserName" type="text" class="form-control" />
                </td>


                <th class="formTitle">创建时间</th>
                <td class="formValue">
                    <input id="F_CreatorTime" name="F_CreatorTime" type="text" class="form-control" />
                </td>
            </tr>
            <tr>
                <th class="formTitle">修改人员</th>
                <td class="formValue">
                    <input id="ModifyUserName" name="ModifyUserName" type="text" class="form-control" />
                </td>


