@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<style>
    .tablediv {
        margin: 30px 40px 0px 0px;
    }

    .ui-sghref > .glyphicon.glyphicon-triangle-right {
        padding-top: 8px;
    }

    .ui-sghref > .glyphicon.glyphicon-triangle-bottom {
        padding-top: 8px;
    }
</style>
<script>
    var InBoundDetailID = $.request("keyvalue");
    $(function () {
        gridList();
    })

    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/PC_ReceiveRecordManage/ReceiveRecord/GetGridJson?InBoundDetailID=" + InBoundDetailID,
            height: $(window).height() - 96,
            colModel: [
                { label: "主键", name: "F_Id", hidden: true, key: true },
                { label: '入库单据', name: 'InBoundCode', width: 150, align: 'left' },
                { label: '容器条码', name: 'BarCode', width: 150, align: 'left' },
                { label: '标签条码', name: 'ItemBarCode', width: 150, align: 'left' },
                { label: '容器类型', name: 'ContainerTypeName', width: 150, align: 'left', sortable: false },
                { label: '物料名称', name: 'ItemName', width: 280, align: 'left' },
                { label: '物料编码', name: 'ItemCode', width: 100, align: 'left' },
                { label: "物料数量", name: "Qty", width: 150, align: 'left' },
                { label: "货位编码", name: "LocationCode", width: 150, align: 'left' },
                { label: "状态", name: "StateName", width: 150, align: 'left', sortable: false },
                { label: "过账状态", name: "TransStateName", width: 150, align: 'left', sortable: false }
            ],
            pager: "#gridPager",
            sortname: 'F_CreatorTime desc',
            viewrecords: true,
        });

        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val() },
            }).trigger('reloadGrid', { fromServer: true, page: 1 });
        });
    }

    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增收货",
            url: "/PC_ReceiveRecordManage/ReceiveRecord/Form",
            width: "650px",
            height: "480px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }

    function btn_edit() {
        var keyValue = $("#gridList").jqGridRowValue().F_Id;
        if (keyValue == null) {
            $.modalMsg("请选择数据", "warning");
            return;
        }
        $.modalOpen({
            id: "Form",
            title: "修改收货",
            url: "/PC_ReceiveRecordManage/ReceiveRecord/Form?keyValue=" + keyValue,
            width: "600px",
            height: "480px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }

    function btn_delete() {
        var rowid = $("#gridList").jqGridRowValue().F_Id;
        if (rowid == null) {
            $.modalMsg("请选择数据", "warning");
            return;
        }

        $.deleteForm({
            url: "/PC_ReceiveRecordManage/ReceiveRecord/DeleteForm",
            param: { keyValue: rowid },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }

    function btn_details() {
        var keyValue = $("#gridList").jqGridRowValue().F_Id;
        if (keyValue == null) {
            $.modalMsg("请选择数据", "warning");
            return;
        }
        $.modalOpen({
            id: "Details",
            title: "查看收货",
            url: "/PC_ReceiveRecordManage/ReceiveRecord/Details?keyValue=" + keyValue,
            width: "600px",
            height: "530px",
            btn: null,
        });
    }
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="NF-add-receive" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i>新建记录</a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
                <li><a id="NF-edit-receive" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改记录</a></li>
                <li><a id="NF-delete-receive" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除记录</a></li>
                <li><a id="NF-Details-receive" authorize="yes" onclick="btn_details()"><i class="fa fa-search-plus"></i>查看记录</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="入库单据 / 物料编码" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>
