@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/PC_LocCountManage/LocCount/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $.checkLogin(data);

                    data.CTU2001 = "false";
                    data.CTU2002 = "false";
                    data.CTU2003 = "false";
                    data.CTU2004 = "false";

                    if (data.PointRobotCode == "" || data.PointRobotCode == null) {
                        data.CTU2001 = "true";
                        data.CTU2002 = "true";
                        data.CTU2003 = "true";
                        data.CTU2004 = "true";
                    }
                    else {
                        var equList = data.PointRobotCode.split(',');
                        $.each(equList, function (i, n) {
                            if (n == "2001") {
                                data.CTU2001 = "true";
                            }
                            if (n == "2002") {
                                data.CTU2002 = "true";
                            }
                            if (n == "2003") {
                                data.CTU2003 = "true";
                            }
                            if (n == "2004") {
                                data.CTU2004 = "true";
                            }
                        });
                    }


                    $("#form1").formSerialize(data);
                    $("#State").attr("disabled", "disabled");
                    $("#IsAllCount").attr('disabled', 'disabled');
                    if ($("#State").val() != 'New') {
                        $("#form1").find('.form-control,select,input,ckbox').attr('disabled', 'readonly');
                    }
                }
            });
        }
        else {
            $.ajax({
                url: "/PC_LocCountManage/LocCount/GenNum",
                data: { ruleCode: "LocCountRule" },
                dataType: "json",
                async: false,
                success: function (data) {
                    $.checkLogin(data);
                    var dataSer = { "LocCountCode": data.Code, "State": "New", "IsAllCount": "true" };
                    $("#form1").formSerialize(dataSer);
                    $("#State").attr("disabled", "disabled");
                    // $("#IsAllCount").attr('disabled', 'disabled');
                }
            });
        }

    });



    function initControl() {
        $("#State").bindSelect({
            url: "/SystemManage/ItemsData/GetDicList?entityName=T_LocCount&fieldName=State",
            id: "F_ItemCode",
            text: "F_ItemName"
        });

        $("#AreaCode").bindSelect({
            url: "/PC_LocCountManage/LocCount/GetAreaDicList",
            id: "AreaCode",
            text: "AreaName"
        });
    }

    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        var data = $("#form1").formSerialize();
        var equList = "";
        if (data.CTU2001 == true) {
            equList = equList == "" ? "2001" : (equList+",2001");
        }
        if (data.CTU2002 == true) {
            equList = equList == "" ? "2002" : (equList +",2002");
        }
        if (data.CTU2003 == true) {
            equList = equList == "" ? "2003" : (equList +",2003");
        }
        if (data.CTU2004 == true) {
            equList = equList == "" ? "2004" : (equList +",2004");
        }

        data.PointRobotCode = equList;

        $.submitForm({
            url: "/PC_LocCountManage/LocCount/SubmitForm?keyValue=" + keyValue,
            param: data,
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            },
            error: function (data) {
                $.modalMsg(data.message, data.state);
            }
        })
    }
</script>

<form id="form1">
    <div style="padding-top: 20px; margin-right: 20px;">
        <table class="form">
            <tr>
                <th class="formTitle">货位校对编码</th>
                <td class="formValue">
                    <input id="LocCountCode" name="LocCountCode" readonly="readonly" type="text" class="form-control required" placeholder="请输入货位校对编码" />
                </td>
                <th class="formTitle">盘点状态</th>
                <td class="formValue">
                    <select id="State" name="State" class="form-control required">
                        <option value="">==请选择==</option>
                    </select>
                </td>
            </tr>
            <tr>
                <th class="formTitle">盘点区域</th>
                <td class="formValue">
                    <select id="AreaCode" name="AreaCode" class="form-control required">
                        <option value="">==请选择==</option>
                    </select>
                </td>
               
            </tr>
            <tr>
                <th class="formTitle">备注</th>
                <td class="formValue" colspan="3">
                    <textarea id="Remark" name="Remark" class="form-control" style="height: 60px;"></textarea>
                </td>

            </tr>
            <tr>
                <th class="formTitle">执行设备</th>
                <td class="formValue" colspan="3">
                    <div class="ckbox">
                        <input id="CTU2001" name="CTU2001" type="checkbox"><label for="CTU2001">CTU-2001</label>
                    </div>
                    <div class="ckbox">
                        <input id="CTU2002" name="CTU2002" type="checkbox"><label for="CTU2002">CTU-2002</label>
                    </div>
                    <div class="ckbox">
                        <input id="CTU2003" name="CTU2003" type="checkbox"><label for="CTU2003">CTU-2003</label>
                    </div>
                    <div class="ckbox">
                        <input id="CTU2004" name="CTU2004" type="checkbox"><label for="CTU2004">CTU-2004</label>
                    </div>
                </td>
            </tr>
            <tr>
                <th class="formTitle">选项</th>
                <td class="formValue" colspan="3">
                    <div class="ckbox">
                        <input id="IsAllCount" name="IsAllCount" type="checkbox"><label for="IsAllCount">是否区域全盘</label>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</form>
