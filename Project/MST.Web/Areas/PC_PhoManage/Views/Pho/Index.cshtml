@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<script>
    $(function () {
        $('#layout').layout();
        treeView();
        gridList();
    });
    function treeView() {
        $("#kindTree").treeview({
            url: "/PC_PhoManage/Pho/GetTreeJson",
            onnodeclick: function (item) {
                $("#txt_keyword").val('');
                $('#btn_search').trigger("click");
            }
        });
    }
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            height: $(window).height() - 128,
            colModel: [
                { label: "主键", name: "F_Id", hidden: true, key: true },
                { label: '物料编码', name: 'ItemCode', width: 80, align: 'left' },
                { label: '物料名称', name: 'ItemName', width: 280, align: 'left' },
                { label: '生产厂家', name: 'Factory', width: 250, align: 'left' },
                { label: '规格', name: 'Spec', width: 100, align: 'left' },
                { label: '批号', name: 'Lot', width: 100, align: 'left' },
                { label: '实物数量', name: 'Qty', width: 50, align: 'center' },
                { label: '待出库数量', name: 'OutQty', width: 50, align: 'center' },
                { label: '取样数量', name: 'CheckQty', width: 50, align: 'center' },
                { label: '计量单位', name: 'ItemUnitText', width: 50, align: 'left' },
                { label: '失效日期', name: 'OverdueDate', width: 80, align: 'left', formatter: "date", formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' } },
                { label: '供应商', name: 'SupplierName', width: 230, align: 'left' },
                { label: '质检状态', name: 'CheckState', width: 50, align: 'center', formatter: function (cellvalue, options, rowObject) { return rowObject.CheckStateName; } },
                { label: '库存状态', name: 'State', width: 50, align: 'center', formatter: function (cellvalue, options, rowObject) { return rowObject.StateName; } },
                {
                    label: '是否特殊料', name: 'IsSpecial', width: 80, align: 'center',
                    formatter: function (cellvalue) {
                        return cellvalue == "true" ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                    }
                },
                {
                    label: 'ERP仓', name: 'ERPWarehouseCode', width: 60, align: 'left', formatter: function (cellvalue, options, rowObject) {
                        if (rowObject.ERPWarehouseCode == "") return "";
                        else return rowObject.ERPWarehouseName;
                    }
                },
                { label: '区域', name: 'AreaName', width: 80, align: 'left' },
                { label: '货位编码', name: 'LocationNo', width: 100, align: 'left' },
                { label: '物料种类', name: 'KindName', width: 80, align: 'left' },
                { label: '容器类型', name: 'ContainerType', width: 80, align: 'left', formatter: function (cellvalue, options, rowObject) { return rowObject.ContainerTypeName; } },
                { label: '容器条码', name: 'BarCode', width: 80, align: 'left' },
                { label: '贴标条码', name: 'ItemBarCode', width: 80, align: 'left' },
                { label: '生产日期', name: 'ProductDate', width: 80, align: 'left', formatter: "date", formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' }},
                
            ],
            pager: "#gridPager",
            sortname: 'AreaCode asc,LocationNo asc',
            viewrecords: true
        });

        //查询按钮
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                url: "/PC_PhoManage/Pho/GetGridJson",
                postData: { PhoID: $("#kindTree").getCurrentNode().id, keyword: $("#txt_keyword").val() },
            }).trigger('reloadGrid', { fromServer: true, page: 1 });
        });
    }

    $(window).bind('resize', function () {
        $("#gridList").setGridWidth($(window).width() - 210);
        $("#gridList").setGridHeight($(window).height() - 130);
    });

    //新建快照
    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新建快照",
            url: "/PC_PhoManage/Pho/Form",
            width: "750px",
            height: "550px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }

    //删除快照
    function btn_delete() {
        $.deleteForm({
            url: "/PC_PhoManage/Pho/DeleteForm",
            param: { keyValue: $("#gridList").jqGridRowValue().F_Id },
            success: function () {
                $("#gridList").resetSelection();
                $("#gridList").trigger("reloadGrid");
            }
        })
    }

    //查看快照明细
    function btn_details() {
        var keyValue = $("#gridList").jqGridRowValue().F_Id;
        $.modalOpen({
            id: "Details",
            title: "查看明细",
            url: "/PC_PhoManage/Pho/Details?keyValue=" + keyValue,
            width: "750px",
            height: "520px",
            btn: null,
        });
    }
</script>


<div class="ui-layout" id="layout" style="height: 100%; width: 100%;">
    <div class="ui-layout-west">
        <div id="kindTree"></div>
    </div>
    <div class="ui-layout-center">
        <div class="topPanel">
            <div class="toolbar">
                <div class="btn-group">
                    <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
                </div>
                <div class="btn-group">
                    <a id="NF-add" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i>新建快照</a>
                </div>
                <div class="operate">
                    <ul class="nav nav-pills">
                        <li class="first">已选中<span>1</span>项</li>
                        <li><a id="NF-edit" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改快照</a></li>
                        <li><a id="NF-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除快照</a></li>
                        <li><a id="NF-Details" authorize="yes" onclick="btn_details()"><i class="fa fa-search-plus"></i>查看快照</a></li>
                    </ul>
                    <a href="javascript:;" class="close"></a>
                </div>
                <script>$('.toolbar').authorizeButton()</script>
            </div>
            <div class="search">
                <table>
                    <tr>
                        <td>
                            <div class="input-group">
                                <input id="txt_keyword" type="text" class="form-control" placeholder="物料编码 / 物料名称 / 货位编码" style="width: 200px;">
                                <span class="input-group-btn">
                                    <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                                </span>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="gridPanel">
            <table id="gridList"></table>
            <div id="gridPager"></div>
        </div>
    </div>
</div>
