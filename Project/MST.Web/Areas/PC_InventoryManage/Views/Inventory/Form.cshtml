@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}

<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/PC_InventoryManage/Inventory/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $.checkLogin(data);
                    $("#form1").formSerialize(data);
                    $("#form1").find('.form-control,select,input').attr('disabled', 'readonly');
                    $("#State").select2({ disabled: "" });
                }
            });
        }
        else {
            $.ajax({
                url: "/PC_InventoryManage/Inventory/GenNum",
                data: { ruleCode: "InventoryRule" },
                dataType: "json",
                async: false,
                success: function (data) {
                    $.checkLogin(data);
                    $("#form1").formSerialize(data);
                }
            });
        }
    });

    function initControl() {
        $("#ItemCode").bindSelect({
            url: "/PC_InventoryManage/Inventory/GetItemList",
            id: "F_Code",
            text: "F_Code",
            search: true
        });

        $("#ItemName").bindSelect({
            url: "/PC_InventoryManage/Inventory/GetItemList",
            id: "F_Name",
            text: "F_Name",
            search: true
        });

        $("#KindCode").bindSelect({
            url: "/PC_InventoryManage/Inventory/GetItemKindList",
            id: "F_Code",
            text: "F_Name",
            search: true
        });

        $("#ContainerType").bindSelect({
            url: "/PC_InventoryManage/Inventory/GetContainerTypeList",
            id: "F_Code",
            text: "F_Name",
            search: true
        });

        $("#LocationNo").bindSelect({
            url: "/PC_InventoryManage/Inventory/GetLocationNoList",
            id: "F_Code",
            text: "F_Code",
            search: true
        });

        $("#SupplierName").bindSelect({
            url: "/PC_InventoryManage/Inventory/GetSupplierList",
            id: "F_Name",
            text: "F_Name",
            search: true
        });

        $("#AreaCode").bindSelect({
            url: "/PC_InventoryManage/Inventory/AreaCodeList",
            id: "F_Code",
            text: "F_Name"
        });

        $("#ERPWarehouseCode").bindSelect({
            url: "/PC_InventoryManage/Inventory/GetERPWarehouseList",
            id: "F_Code",
            text: "F_Name",
            search: true
        });

        $("#ContainerKind").bindSelect({
            url: "/SystemManage/ItemsData/GetDicList?entityName=T_ContainerType&fieldName=ContainerKind",
            id: "F_ItemCode",
            text: "F_ItemName"
        });

        $("#State").bindSelect({
            url: "/SystemManage/ItemsData/GetDicList?entityName=T_ContainerDetail&fieldName=State",
            id: "F_ItemCode",
            text: "F_ItemName"
        });
    }

    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }

        $.submitForm({
            url: "/PC_InventoryManage/Inventory/SubmitForm?keyValue=" + keyValue,
            param: $("#form1").formSerialize(),
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            },
            error: function (data) {
                $.modalMsg(data.message, data.state);
            }
        })
    }
</script>

<form id="form1">
    <div style="padding-top: 20px; margin-right: 20px;">
        <table class="form">
            <tr>
                <th class="formTitle">物料编码</th>
                <td class="formValue">
                    <select id="ItemCode" name="ItemCode" class="form-control required">
                        <option value="">==请选择==</option>
                    </select>
                </td>
                <th class="formTitle">物料名称</th>
                <td class="formValue">
                    <select id="ItemName" name="ItemName" class="form-control required">
                        <option value="">==请选择==</option>
                    </select>
                </td>
            </tr>
            <tr>
                <th class="formTitle">物料种类</th>
                <td class="formValue">
                    <select id="KindCode" name="KindCode" class="form-control required">
                        <option value="">==请选择==</option>
                    </select>
                </td>
                <th class="formTitle">贴标条码</th>
                <td class="formValue">
                    <input id="ItemBarCode" name="ItemBarCode" type="text" class="form-control" />
                </td>
            </tr>
            <tr>
                <th class="formTitle">区域名称</th>
                <td class="formValue">
                    <select id="AreaCode" name="AreaCode" class="form-control required">
                        <option value="">==请选择==</option>
                    </select>
                </td>
                <th class="formTitle">ERP仓库</th>
                <td class="formValue">
                    <select id="ERPWarehouseCode" name="ERPWarehouseCode" class="form-control required">
                        <option value="">==请选择==</option>
                    </select>
                </td>
            </tr>
            <tr>
                <th class="formTitle">容器大类</th>
                <td class="formValue">
                    <select id="ContainerKind" name="ContainerKind" class="form-control required">
                        <option value="">==请选择==</option>
                    </select>
                </td>
                <th class="formTitle">容器类型</th>
                <td class="formValue">
                    <select id="ContainerType" name="ContainerType" class="form-control required">
                        <option value="">==请选择==</option>
                    </select>
                </td>
            </tr>
            <tr>
                <th class="formTitle">容器条码</th>
                <td class="formValue">
                    <input id="BarCode" name="BarCode" type="text" class="form-control" />
                </td>
                <th class="formTitle">货位编码</th>
                <td class="formValue">
                    <select id="LocationNo" name="LocationNo" class="form-control required">
                        <option value="">==请选择==</option>
                    </select>
                </td>
            </tr>
            <tr>
                <th class="formTitle">供应商</th>
                <td class="formValue">
                    <select id="SupplierName" name="SupplierName" class="form-control required">
                        <option value="">==请选择==</option>
                    </select>
                </td>
                <th class="formTitle">批号</th>
                <td class="formValue">
                    <input id="Lot" name="Lot" type="text" class="form-control"/>
                </td>
            </tr>
            <tr>
                <th class="formTitle">库存状态</th>
                <td class="formValue">
                    <select id="State" name="State" class="form-control required">
                        <option value="">==请选择==</option>
                    </select>
                </td>
                <th class="formTitle">实物数量</th>
                <td class="formValue">
                    <input id="Qty" name="Qty" type="text" class="form-control required"/>
                </td>
            </tr>
            <tr>
                <th class="formTitle">待出库数量</th>
                <td class="formValue">
                    <input id="OutQty" name="OutQty" type="text" class="form-control required"/>
                </td>
                <th class="formTitle">取样数量</th>
                <td class="formValue">
                    <input id="CheckQty" name="CheckQty" type="text" class="form-control required"/>
                </td>
            </tr>
            <tr>
                <th class="formTitle">生产时间</th>
                <td class="formValue">
                    <input id="ProductDate" name="ProductDate" type="text" onclick="WdatePicker()" class="Wdate"/>
                </td>
                <th class="formTitle">过期时间</th>
                <td class="formValue">
                    <input id="OverdueDate" name="OverdueDate" type="text" onclick="WdatePicker()" class="Wdate"/>
                </td>
            </tr>
            <tr>
                <th class="formTitle">选项</th>
                <td class="formValue" colspan="3">
                    <div class="ckbox">
                        <input id="IsCheckFreeze" name="IsCheckFreeze" type="checkbox"><label for="IsCheckFreeze">质检冻结</label>
                    </div>
                    <div class="ckbox">
                        <input id="IsCountFreeze" name="IsCountFreeze" type="checkbox"><label for="IsCountFreeze">盘点冻结</label>
                    </div>
                    <div class="ckbox">
                        <input id="IsSpecial" name="IsSpecial" type="checkbox"><label for="IsSpecial">特殊物料</label>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</form>