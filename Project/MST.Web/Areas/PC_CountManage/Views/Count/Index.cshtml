@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<style>
    .tablediv {
        margin: 30px 40px 0px -22px;
    }

    .ui-sghref > .glyphicon.glyphicon-triangle-right {
        padding-top: 8px;
    }

    .ui-sghref > .glyphicon.glyphicon-triangle-bottom {
        padding-top: 8px;
    }
</style>

<script>
    var tipRowId = "";
    var tipIsShow = false;
    var queryJson = "";

    $(function () {
        gridList();
    })

    function gridList() {
        var $gridList = $("#gridList");
        queryJson = { resultType: $("#result_horizon a.active").attr('data-value') }
        $gridList.dataGrid({
            url: "/PC_CountManage/Count/GetGridJson",
            postData: { queryJson: JSON.stringify(queryJson) },
            height: $(window).height() - 126,
            colModel: [
                { label: "主键", name: "F_Id", hidden: true, key: true },
                { label: '盘点单号', name: 'CountCode', width: 150, align: 'left' },
                { label: '来源单号', name: 'RefOrderCode', width: 150, align: 'left' },
                { label: '区域类型', name: 'AreaType', width: 100, align: 'left', formatter: function (cellvalue, options, rowObject) { return rowObject.AreaTypeName; } },
                { label: 'ERP仓库', name: 'ERPHouseCode', width: 100, align: 'left', formatter: function (cellvalue, options, rowObject) { return rowObject.ERPHouseName; } },
                { label: '盘点单状态', name: 'State', width: 100, align: 'left', formatter: function (cellvalue, options, rowObject) { return rowObject.StateName; } },
                { label: '生成方式', name: 'GenType', width: 100, align: 'left', formatter: function (cellvalue, options, rowObject) { return rowObject.GenTypeName; } },
                { label: '是否明盘', name: 'IsOpen', width: 100, align: 'center', formatter: function (cellvalue) { return cellvalue == "true" ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>"; } },
                {
                    label: '确认审核', name: 'AuditResult', width: 100, align: 'center',
                    formatter: function (cellvalue, options, rowObject) {
                        var detail = "";
                        if (rowObject.AuditResult == "WaitApply") {
                            detail = "<div onclick=\"btn_countAuditConfirm(\'" + rowObject.F_Id + "\')\" title='确认审核' class='fa fa-hand-pointer-o'></div>";
                        }
                        else {
                            detail = "已确认";
                        }
                        return detail;
                    },
                },
                { label: '审核状态', name: 'AuditState', width: 100, align: 'left', formatter: function (cellvalue, options, rowObject) { return rowObject.AuditStateName; } },
                { label: "创建人", name: "CreatorUserName", width: 100, align: 'left' },
                { label: "创建时间", name: "F_CreatorTime", width: 100, align: 'left', formatter: "date", formatoptions: { newformat: 'Y-m-d' } },
                { label: "备注", name: "Remark", width: 300, align: 'left' },
            ],
            pager: "#gridPager",
            sortname: 'F_CreatorTime desc',
            viewrecords: true,
            subGrid: true,
            subGridOptions: { openicon: "ui-helper-hidden" },
            subGridBeforeExpand: function (subgrid_id, row_id) { //展开前，返回false不展开

            },
            beforeProcessing: function (ts, data, st, xhr) {
                return true;
            },
            subGridRowExpanded: function (subgrid_id, row_id) { //点击加号按钮展开
                $.each($("#" + row_id).siblings(), function (i, n) {
                    if ($(n).hasClass("ui-subgrid") && $(n).hasClass("ui-sg-expanded")) {
                        var id = $(n).attr("id").replace("gridList_", "").replace("_expandedContent", "");
                        $.each($("#" + id).children("td"), function (j, k) {
                            if ($(k).hasClass("ui-sgcollapsed") && $(k).hasClass("sgexpanded")) {
                                $(k).trigger("click");
                            }
                        })
                    }
                });

                $("#" + subgrid_id).html('<div style="height:450px;width:100%;overflow:auto"><iframe class= "MST_iframe_row" id = "iframe" name = "iframe" width = "100%" height = "95%" src = "/PC_CountManage/CountDetail/Index?keyvalue=' + row_id + '" frameborder = "0"  seamless = "" ></iframe ></div > ');
                $gridList.jqGrid('setSelection', row_id);

                tipRowId = row_id;
                tipIsShow = true;
            },
            subGridRowColapsed: function (subgrid_id, row_id) { //点击加号按钮收缩，返回false不收缩
                var subgrid_table_id = "gridList_" + row_id + "_expandedContent";
                $("#" + subgrid_table_id).remove();

                tipRowId = row_id;
                tipIsShow = false;
            },
            serializeSubGridData: function (subgrid_id, row_id) { //初始化数据

            },
            onSelectRow: function (rowid) {
                tipRowId = rowid;
            },
            loadComplete: function () {
                if (tipIsShow) {
                    $("#" + tipRowId + ">td[aria-describedby='gridList_subgrid']").trigger("click");
                }
            }
        });

        $("#btn_search").click(function () {
            var queryJson = {
                keyword: $("#txt_keyword").val(),
                resultType: $("#result_horizon a.active").attr('data-value')
            }
            $gridList.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) },
            }).trigger('reloadGrid', { fromServer: true, page: 1 });
        });

        $("#result_horizon a.btn-default").click(function () {
            $("#result_horizon a.btn-default").removeClass("active");
            $(this).addClass("active");
            $('#btn_search').trigger("click");
        });
    }

    $(window).bind('resize', function () {
        $("#gridList").setGridWidth($(window).width());
        $("#gridList").setGridHeight($(window).height() - 126);
    });

    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增盘点单",
            url: "/PC_CountManage/Count/Form",
            width: "650px",
            height: "480px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }

    function btn_edit() {
        var keyValue = $("#gridList").jqGridRowValue().F_Id;
        if (keyValue == null) {
            $.modalMsg("请选择数据", "warning");
            return;
        }
        $.modalOpen({
            id: "Form",
            title: "修改盘点单",
            url: "/PC_CountManage/Count/Form?keyValue=" + keyValue,
            width: "600px",
            height: "480px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }

    function btn_delete() {
        var rowid = $("#gridList").jqGridRowValue().F_Id;
        if (rowid == null) {
            $.modalMsg("请选择数据", "warning");
            return;
        }
        $.deleteForm({
            url: "/PC_CountManage/Count/DeleteForm",
            param: { keyValue: rowid },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }

    function btn_details() {
        var keyValue = $("#gridList").jqGridRowValue().F_Id;
        if (keyValue == null) {
            $.modalMsg("请选择数据", "warning");
            return;
        }
        $.modalOpen({
            id: "Details",
            title: "查看盘点单",
            url: "/PC_CountManage/Count/Details?keyValue=" + keyValue,
            width: "600px",
            height: "530px",
            btn: null,
        });
    }

    //复盘
    function btn_ReCount() {
        var keyValue = $("#gridList").jqGridRowValue().F_Id;
        if (keyValue == null) {
            $.modalMsg("请选择数据", "warning");
            return;
        }

        $.modalOpen({
            id: "ReCount",
            title: "复盘",
            url: "/PC_CountManage/Count/ReCount?keyValue=" + keyValue,
            width: "450px",
            height: "360px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }

    //开始盘点
    function btn_countOnOff() {
        var keyValue = $("#gridList").jqGridRowValue().F_Id;
        if (keyValue == null) {
            $.modalMsg("请选择数据", "warning");
            return;
        }
        var postdata = {};
        if ($('[name=__RequestVerificationToken]').length > 0) {
            postdata["__RequestVerificationToken"] = $('[name=__RequestVerificationToken]').val();
        }
        postdata["countID"] = keyValue;
        //$.ajax({
        //    url: "/PC_CountManage/Count/CountOnOff",
        //    data: postdata,
        //    dataType: "json",
        //    type: "POST",
        //    async: false,
        //    success: function (data) {
        //        $.checkLogin(data);
        //        if (data.state == "success") {
        //            $.modalMsg(data.message, data.state);
        //            $("#gridList").trigger("reloadGrid");
        //        }
        //        else {
        //            $.modalAlert(data.message, data.state);
        //        }

        //    }
        //});

        $.submitForm({
            url: "/PC_CountManage/Count/CountOnOff",
            param: postdata,
            success: function (data) {
                $.checkLogin(data);
                if (data.state == "success") {
                    $.modalMsg(data.message, data.state);
                    $("#gridList").trigger("reloadGrid");
                }
                else {
                    $.modalAlert(data.message, data.state);
                }
            },
            error: function (data) {
                $.modalMsg(data.message, data.state);
            }
        })
    }

    //强制完成
    function btn_countOver() {
        var keyValue = $("#gridList").jqGridRowValue().F_Id;
        if (keyValue == null) {
            $.modalMsg("请选择数据", "warning");
            return;
        }
        $.modalConfirm("确认强制完成盘点吗？", function (r) {
            if (r) {
                var postdata = {};
                if ($('[name=__RequestVerificationToken]').length > 0) {
                    postdata["__RequestVerificationToken"] = $('[name=__RequestVerificationToken]').val();
                }
                postdata["countID"] = keyValue;
                $.ajax({
                    url: "/PC_CountManage/Count/CountOver",
                    data: postdata,
                    dataType: "json",
                    type: "POST",
                    async: false,
                    success: function (data) {
                        $.checkLogin(data);
                        if (data.state == "success") {
                            $.modalMsg(data.message, data.state);
                            $("#gridList").trigger("reloadGrid");
                        }
                        else {
                            $.modalAlert(data.message, data.state);
                        }

                    }
                });
            }
        })
    }

    // 提交盘点审核
    function btn_countAuditSumbit() {
        $.modalConfirm("确认提交盘点审核吗？", function (r) {
            if (r) {
                var keyValue = $("#gridList").jqGridRowValue().F_Id;
                var postdata = {};
                if ($('[name=__RequestVerificationToken]').length > 0) {
                    postdata["__RequestVerificationToken"] = $('[name=__RequestVerificationToken]').val();
                }
                postdata["countID"] = keyValue;
                $.ajax({
                    url: "/PC_CountManage/Count/SubmitCountAudit",
                    data: postdata,
                    dataType: "json",
                    type: "POST",
                    async: false,
                    success: function (data) {
                        $.checkLogin(data);
                        if (data.state == "success") {
                            $.modalMsg(data.message, data.state);
                            $("#gridList").trigger("reloadGrid");
                        }
                        else {
                            $.modalAlert(data.message, data.state);
                        }

                    }
                });
            }
        })
    }

    // 确认应用审核结果
    function btn_countAuditConfirm(rowID) {
        var keyValue = "";
        if (rowID == "" || rowID == undefined) {
            keyValue = $("#gridList").jqGridRowValue().F_Id;
        }
        else {
            keyValue = rowID;
        }

        $.modalConfirm("确认应用审核结果吗？", function (r) {
            if (r) {
                var postdata = {};
                if ($('[name=__RequestVerificationToken]').length > 0) {
                    postdata["__RequestVerificationToken"] = $('[name=__RequestVerificationToken]').val();
                }
                postdata["countID"] = keyValue;
                $.ajax({
                    url: "/PC_CountManage/Count/ConfirmCountAudit",
                    data: postdata,
                    dataType: "json",
                    type: "POST",
                    async: false,
                    success: function (data) {
                        $.checkLogin(data);
                        if (data.state == "success") {
                            $.modalMsg(data.message, data.state);
                            $("#gridList").trigger("reloadGrid");
                        }
                        else {
                            $.modalAlert(data.message, data.state);
                        }

                    }
                });
            }
        })
    }
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="NF-add" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i>新建盘点单</a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
                <li><a id="NF-edit-CountOnOff" authorize="yes" onclick="btn_countOnOff()"><i class="fa fa-pencil-square-o"></i>开始盘点</a></li>
                <li><a id="NF-edit-Sumbit" authorize="yes" onclick="btn_countAuditSumbit()"><i class="fa fa-long-arrow-up"></i>提交审核</a></li>
                <li><a id="NF-edit-CountOver" authorize="yes" onclick="btn_countOver()"><i class="fa fa-pencil-square-o"></i>强制完成</a></li>
                <li><a id="NF-edit-ReCount" authorize="yes" onclick="btn_ReCount()"><i class="fa fa-pencil-square-o"></i>异常复盘</a></li>
                <li><a id="NF-edit" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改盘点单</a></li>
                <li><a id="NF-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除盘点单</a></li>
                <li><a id="NF-Details" authorize="yes" onclick="btn_details()"><i class="fa fa-search-plus"></i>查看盘点单</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="盘点单号 / 来源单号" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
                <td style="padding-left: 10px;">
                    <div id="result_horizon" class="btn-group">
                        <a class="btn btn-default" data-value="1">全部</a>
                        <a class="btn btn-default  active" data-value="2">未结束</a>
                        <a class="btn btn-default" data-value="3">结束</a>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>