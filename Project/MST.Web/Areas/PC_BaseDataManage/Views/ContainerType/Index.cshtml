@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        gridList();
    })

    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/PC_BaseDataManage/ContainerType/GetGridJson",
            height: $(window).height() - 126,
            colModel: [
                { label: "主键", name: "F_Id", hidden: true, key: true },
                { label: '容器类型编码', name: 'ContainerTypeCode', width: 150, align: 'left' },
                { label: '容器类型名称', name: 'ContainerTypeName', width: 250, align: 'left' },
                {
                    label: "容器大类", name: "ContainerKind", width: 60, align: 'left', formatter: function (cellvalue, options, rowObject) {
                        return rowObject.ContainerKindName;
                    }
                },
                {
                    label: "入库站台", name: "InStationID", width: 100, align: 'left', formatter: function (cellvalue, options, rowObject) {
                        return rowObject.InStationName;
                    }
                },
                {
                    label: "出库站台", name: "OutStationID", width: 100, align: 'left', formatter: function (cellvalue, options, rowObject) {
                        return rowObject.OutStationName;
                    }
                },
                { label: "AGV箱型", name: "AGVContainerTypeCode", width: 150, align: 'left' },
                { label: "深", name: "BorderLong", width: 50, align: 'left' },
                { label: "宽", name: "BorderWidth", width: 50, align: 'left' },
                { label: "高", name: "BorderHeight", width: 50, align: 'left' },
                { label: "货位最小深", name: "LocMinLong", width: 70, align: 'center' },
                { label: "货位最小宽", name: "LocMinWidth", width: 70, align: 'center' },
                { label: "货位最小高", name: "LocMinHeight", width: 70, align: 'center' },
                { label: "货位最大深", name: "LocMaxLong", width: 70, align: 'center' },
                { label: "货位最大宽", name: "LocMaxWidth", width: 70, align: 'center' },
                { label: "货位最大高", name: "LocMaxHeight", width: 70, align: 'center' },
                {
                    label: '系统数据', name: 'IsBase', width: 60, align: 'center',
                    formatter: function (cellvalue) {
                        return cellvalue == "true" ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                    }
                }
            ],
            pager: "#gridPager",
            sortname: 'F_CreatorTime desc',
            viewrecords: true,
        });

        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val() },
            }).trigger('reloadGrid', { fromServer: true, page: 1 });
        });
    }

    $(window).bind('resize', function () {
        $("#gridList").setGridWidth($(window).width());
        $("#gridList").setGridHeight($(window).height() - 126);
    });

    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增容器",
            url: "/PC_BaseDataManage/ContainerType/Form",
            width: "650px",
            height: "520px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }

    function btn_edit() {
        var keyValue = $("#gridList").jqGridRowValue().F_Id;
        $.modalOpen({
            id: "Form",
            title: "修改容器",
            url: "/PC_BaseDataManage/ContainerType/Form?keyValue=" + keyValue,
            width: "650px",
            height: "520px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }

    function btn_delete() {
        $.deleteForm({
            url: "/PC_BaseDataManage/ContainerType/DeleteForm",
            param: { keyValue: $("#gridList").jqGridRowValue().F_Id },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }

    function btn_details() {
        var keyValue = $("#gridList").jqGridRowValue().F_Id;
        $.modalOpen({
            id: "Details",
            title: "查看容器",
            url: "/PC_BaseDataManage/ContainerType/Details?keyValue=" + keyValue,
            width: "650px",
            height: "580px",
            btn: null,
        });
    }
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="NF-add" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i>新建容器</a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
                <li><a id="NF-edit" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改容器</a></li>
                <li><a id="NF-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除容器</a></li>
                <li><a id="NF-Details" authorize="yes" onclick="btn_details()"><i class="fa fa-search-plus"></i>查看容器</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="容器类型名称 / 容器类型编码" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>
