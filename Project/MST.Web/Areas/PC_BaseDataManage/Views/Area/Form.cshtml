@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/PC_BaseDataManage/Area/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $.checkLogin(data);
                    $("#form1").formSerialize(data);
                    $("#AreaCode").attr("disabled", "disabled");
                }
            });
        }

        $.hideBaseData();
    });
    function initControl() {
        $("#ParentID").bindSelect({
            url: "/PC_BaseDataManage/Area/GetTreeSelectJson",
            search: true
        });

        $("#AreaType").bindSelect({
            url: "/SystemManage/ItemsData/GetDicList?entityName=T_Area&fieldName=AreaType",
            id: "F_ItemCode",
            text: "F_ItemName"
        });
    }
    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        $.submitForm({
            url: "/PC_BaseDataManage/Area/SubmitForm?keyValue=" + keyValue,
            param: $("#form1").formSerialize(),
            success: function () {
                top.ItemsType.$("#gridList").resetSelection();
                top.ItemsType.$("#gridList").trigger("reloadGrid");
            },
            error: function (data) {
                $.modalMsg(data.message, data.state);
            }
        })
    }
</script>

<form id="form1">
    <div style="padding-top: 20px; margin-right: 20px;">
        <table class="form">
            <tr>
                <th class="formTitle">上级</th>
                <td class="formValue">
                    <select id="ParentID" name="ParentID" class="form-control required">
                        <option value="0">父节点</option>
                    </select>
                </td>
                <th class="formTitle">编号</th>
                <td class="formValue">
                    <input id="AreaCode" name="AreaCode" type="text" class="form-control required" placeholder="请输入编号" />
                </td>
            </tr>
            <tr>
                <th class="formTitle">名称</th>
                <td class="formValue">
                    <input id="AreaName" name="AreaName" type="text" class="form-control required" placeholder="请输入名称" />
                </td>
                <th class="formTitle">区域类型</th>
                <td class="formValue">
                    <select id="AreaType" name="AreaType" class="form-control required">
                        <option value="">==请选择==</option>
                    </select>
                </td>

            </tr>
            <tr>
                <th class="formTitle">货位前缀</th>
                <td class="formValue">
                    <input id="LocationPrefix" name="LocationPrefix" type="text" class="form-control required" placeholder="请输货位前缀" />
                </td>
            </tr>
            <tr>
                <th class="formTitle">选项</th>
                <td class="formValue" colspan="3">
                    <div class="ckbox">
                        <input id="IsMain" name="IsMain" type="checkbox"><label for="IsMain">主区域</label>
                    </div>
                    <div class="ckbox">
                        <input id="IsAreaVir" name="IsAreaVir" type="checkbox"><label for="IsAreaVir">虚拟区域</label>
                    </div>

                    <div class="ckbox">
                        <input id="IsERPPy" name="IsERPPy" type="checkbox"><label for="IsERPPy">ERP物理区域</label>
                    </div>
                    <div class="ckbox">
                        <input id="IsCheckPy" name="IsCheckPy" type="checkbox"><label for="IsCheckPy">质检物理区域</label>
                    </div>
                    <div class="ckbox">
                        <input id="IsEvenTunnel" name="IsEvenTunnel" type="checkbox" checked="checked"><label for="IsEvenTunnel">巷道均分</label>
                    </div>
                    <div class="ckbox">
                        <input id="IsTunnelDesc" name="IsTunnelDesc" type="checkbox"><label for="IsTunnelDesc">巷道倒序</label>
                    </div>
                    <div class="ckbox">
                        <input id="IsEnable" name="IsEnable" type="checkbox" checked="checked"><label for="IsEnable">启用</label>
                    </div>
                    <div class="ckbox">
                        <input id="IsBase" name="IsBase" sysbasedata="yes" type="checkbox" checked="checked"><label for="IsBase">系统数据</label>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</form>
