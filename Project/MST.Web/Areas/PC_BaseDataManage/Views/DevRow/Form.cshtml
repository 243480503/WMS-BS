@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    var areaID = $.request("areaID"); //区域ID

    $(function () {

        if (!!keyValue) {
            $.ajax({
                url: "/PC_BaseDataManage/DevRow/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $.checkLogin(data);
                    $("#form1").formSerialize(data);
                    $("#Line").attr("disabled", "disabled");
                }
            });
        }

        $.hideBaseData();
    });



    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        var data = $("#form1").formSerialize();
        data.AreaID = areaID;
        $.submitForm({
            url: "/PC_BaseDataManage/DevRow/SubmitForm?keyValue=" + keyValue,
            param: data ,
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
                top.frames.TunnelDetails.$("#gridList").trigger("reloadGrid");

            },
            error: function (data) {
                $.modalMsg(data.message, data.state);
                top.frames.TunnelDetails.$("#gridList").trigger("reloadGrid");
            }
        })
    }
</script>

<form id="form1">
    <div style="padding-top: 20px; margin-right: 20px;">
        <table class="form">
            <tr>
                <th class="formTitle">巷道编码</th>
                <td class="formValue">
                    <input id="WayCode" name="WayCode" type="text" class="form-control required" placeholder="请输入巷道编码" />
                </td>
                <th class="formTitle">巷道序号</th>
                <td class="formValue">
                    <input id="Num" name="Num" type="number" class="form-control required" placeholder="请输入巷道序号" />
                </td>
            </tr>
            <tr>
                <th class="formTitle">选项</th>
                <td class="formValue" colspan="3">
                    <div class="ckbox">
                        <input id="IsCursor" name="IsCursor" type="checkbox"><label for="IsCursor">当前游标</label>
                    </div>
                    <div class="ckbox">
                        <input id="IsEvenInnerTunnel" name="IsEvenInnerTunnel" type="checkbox" checked="checked"><label for="IsEvenInnerTunnel">巷道内均分</label>
                    </div> 
                    <div class="ckbox">
                        <input id="IsLineDesc" name="IsLineDesc" type="checkbox" checked="checked"><label for="IsLineDesc">行倒序</label>
                    </div>
                    <div class="ckbox">
                        <input id="IsEnable" name="IsEnable" type="checkbox" checked="checked"><label for="IsEnable">是否启用</label>
                    </div>
                    <div class="ckbox">
                        <input id="IsBase" name="IsBase" sysbasedata="yes" type="checkbox" checked="checked"><label for="IsBase">系统数据</label>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</form>
