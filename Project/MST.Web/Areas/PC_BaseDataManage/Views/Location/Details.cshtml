@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    var IsERPPy = false;

    $(function () {
        initControl();
        $.ajax({
            url: "/PC_BaseDataManage/Location/GetFormJson",
            data: { keyValue: keyValue },
            dataType: "json",
            async: false,
            success: function (data) {
                $.checkLogin(data);
                $("#form1").formSerialize(data);
                $("#form1").find('.form-control,select,input').attr('readonly', 'readonly');
                $("#form1").find('select').attr('disable');
                $("#form1").find('div.ckbox label').attr('for', '');

                $("#State").select2({ "disabled": "readonly" });
                $("#ForbiddenState").select2({ "disabled": "readonly" });
                $("#ERPHouseCode").select2({ "disabled": "readonly" });
            }
        });

        $.ajax({
            url: "/PC_BaseDataManage/Location/GetERPPhy",
            data: { keyValue: keyValue },
            dataType: "json",
            async: false,
            success: function (data) {
                IsERPPy = data.IsERPPy;

                if (IsERPPy == false) { //ERP区域不视作物理区域
                    $(".ERPHouseCodeDiv").hide();
                }
            }
        });
    });

    function initControl() {
        $("#State").bindSelect({
            url: "/SystemManage/ItemsData/GetDicList?entityName=T_Location&fieldName=State",
            id: "F_ItemCode",
            text: "F_ItemName"
        });

        $("#ForbiddenState").bindSelect({
            url: "/SystemManage/ItemsData/GetDicList?entityName=T_Location&fieldName=ForbiddenState",
            id: "F_ItemCode",
            text: "F_ItemName"
        });

        $("#LocationType").bindSelect({
            url: "/SystemManage/ItemsData/GetDicList?entityName=T_Location&fieldName=LocationType",
            id: "F_ItemCode",
            text: "F_ItemName",
            search: true
        });

        $("#ERPHouseCode").bindSelect({
            url: "/PC_BaseDataManage/Location/GetErpHouseDicList",
            id: "ERPHouseCode",
            text: "ERPHouseName"
        });
    }
</script>
<form id="form1">
    <div style="padding-top: 20px; margin-right: 20px;">
        <table class="form">
            <tr>
                <th class="formTitle">货位编码</th>
                <td class="formValue">
                    <input id="LocationCode" name="LocationCode" type="text" class="form-control" readonly="readonly" placeholder="请输入货位编码" />
                </td>
                <th class="formTitle">货位类型</th>
                <td class="formValue">
                    <select id="LocationType" name="LocationType" disabled class="form-control required">
                        <option value="">==请选择==</option>
                    </select>
                </td>
            </tr>
            <tr>
                <th class="formTitle">行</th>
                <td class="formValue">
                    <input id="Line" name="Line" type="number" min="1" class="form-control required" readonly="readonly" placeholder="请输入行" />
                </td>
                <th class="formTitle">列</th>
                <td class="formValue">
                    <input id="ColNum" name="ColNum" type="number" min="1" class="form-control required" readonly="readonly" placeholder="请输入列" />
                </td>
            </tr>
            <tr>
                <th class="formTitle">层</th>
                <td class="formValue">
                    <input id="Layer" name="Layer" type="number" min="1" class="form-control required" readonly="readonly" placeholder="请输入层" />
                </td>
                <th class="formTitle">载重</th>
                <td class="formValue">
                    <input id="Weight" name="Weight" type="number" min="0" class="form-control" placeholder="请输入载重" />
                </td>
            </tr>
            <tr>
                <th class="formTitle">货位高度</th>
                <td class="formValue">
                    <input id="High" name="High" type="number" min="0" class="form-control" placeholder="请输入货位高度" />
                </td>
                <th class="formTitle">货位宽度</th>
                <td class="formValue">
                    <input id="Width" name="Width" type="number" min="0" class="form-control" placeholder="请输入货位宽度" />
                </td>
            </tr>
            <tr>
                <th class="formTitle">货位状态</th>
                <td class="formValue">
                    <select id="State" name="State" class="form-control required">
                        <option value="">==请选择==</option>
                    </select>
                </td>
                <th class="formTitle">禁用状态</th>
                <td class="formValue">
                    <select id="ForbiddenState" name="ForbiddenState" class="form-control required">
                        <option value="">==请选择==</option>
                    </select>
                </td>
            </tr>
            <tr>
                <th class="formTitle">WCS货位编码</th>
                <td class="formValue">
                    <input id="WCSLocCode" name="WCSLocCode" type="text" min="0" class="form-control" placeholder="请输入WCS货位编码" />
                </td>
                <th class="formTitle ERPHouseCodeDiv">ERP物理区域</th>
                <td class="formValue ERPHouseCodeDiv">
                    <select id="ERPHouseCode" name="ERPHouseCode" class="form-control required">
                        <option value="">==请选择==</option>
                    </select>
                </td>
            </tr>
            <tr>
                <th class="formTitle">选项</th>
                <td class="formValue">
                    <div class="ckbox">
                        <input id="IsBase" name="IsBase" type="checkbox" checked="checked"><label for="IsBase">系统数据</label>
                    </div>
                </td>
            </tr>
            <tr>
                <th class="formTitle">创建人员</th>
                <td class="formValue">
                    <input id="CreatorUserName" name="CreatorUserName" type="text" class="form-control" />
                </td>


                <th class="formTitle">创建时间</th>
                <td class="formValue">
                    <input id="F_CreatorTime" name="F_CreatorTime" type="text" class="form-control" />
                </td>
            </tr>
            <tr>
                <th class="formTitle">修改人员</th>
                <td class="formValue">
                    <input id="ModifyUserName" name="ModifyUserName" type="text" class="form-control" />
                </td>


                <th class="formTitle">修改时间</th>
                <td class="formValue">
                    <input id="F_LastModifyTime" name="F_LastModifyTime" type="text" class="form-control" />
                </td>
            </tr>
        </table>
    </div>
</form>
