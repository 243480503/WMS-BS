@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/PC_TransManage/Trans/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $.checkLogin(data);
                    $("#form1").formSerialize(data);
                    $("#OrderType").select2({ disabled: "readonly" });
                }
            });
        }
    });
    function initControl() {
        $("#State").bindSelect({
            url: "/SystemManage/ItemsData/GetDicList?entityName=T_TransRecord&fieldName=State",
            id: "F_ItemCode",
            text: "F_ItemName"
        });

        $("#OrderType").bindSelect({
            url: "/SystemManage/ItemsData/GetDicList?entityName=T_TransRecord&fieldName=OrderType",
            id: "F_ItemCode",
            text: "F_ItemName",
            search: true
        });
    }

    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        $.submitForm({
            url: "/PC_TransManage/Trans/SubmitForm?keyValue=" + keyValue,
            param: $("#form1").formSerialize(),
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            },
            error: function (data) {
                $.modalMsg(data.message, data.state);
            }
        })
    }
</script>
<form id="form1">
    <div style="padding-top: 20px; margin-right: 20px;">
        <table class="form">
            <tr>
                <th class="formTitle">单据编号</th>
                <td class="formValue">
                    <input id="OrderCode" name="OrderCode" type="text" readonly="readonly" class="form-control required" placeholder="请输入单据编码" />
                </td>
                <th class="formTitle">单据类型</th>
                <td class="formValue">
                    <select id="OrderType" name="OrderType" class="form-control required">
                    </select>
                </td>
            </tr>
            <tr>
                <th class="formTitle">最大过账次数</th>
                <td class="formValue">
                    <input id="MaxTransCount" name="MaxTransCount" readonly="readonly" type="text" class="form-control" placeholder="请输入最大过账次数" />
                </td>
                <th class="formTitle">失败次数</th>
                <td class="formValue">
                    <input id="ErrCount" name="ErrCount" type="text" readonly="readonly" class="form-control" placeholder="请输入失败次数" />
                </td>
            </tr>
            <tr>
                <th class="formTitle">最后过账时间</th>
                <td class="formValue">
                    <input id="LastTime" name="LastTime" type="text" readonly="readonly" class="form-control" placeholder="请输入最后过账时间" />
                </td>
                <th class="formTitle">状态</th>
                <td class="formValue">
                    <select id="State" name="State" class="form-control required">
                    </select>
                </td>
            </tr>
            <tr>
                <th class="formTitle">选项</th>
                <td class="formValue">
                    <div class="ckbox">
                        <input id="IsIgnore" name="IsIgnore" type="checkbox"><label for="IsIgnore">是否忽略</label>
                    </div>
                </td>
            </tr>
            <tr>
                <th class="formTitle" valign="top" style="padding-top: 5px;">
                    发送报文
                </th>
                <td class="formValue" colspan="3">
                    <textarea id="SendText" name="SendText" readonly="readonly"  class="form-control" style="height: 130px;"></textarea>
                </td>
            </tr>
            <tr>
                <th class="formTitle" valign="top" style="padding-top: 5px;">
                    接收报文
                </th>
                <td class="formValue" colspan="3">
                    <textarea id="GetText" name="GetText" readonly="readonly"  class="form-control" style="height: 130px;"></textarea>
                </td>
            </tr>
        </table>
    </div>
</form>
