@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    var queryJson = "";

    $(function () {
        gridList();
    })

    function gridList() {
        var $gridList = $("#gridList");
        queryJson = { resultType: $("#result_horizon a.active").attr('data-value') }
        $gridList.dataGrid({
            url: "/PC_MsgManage/Msg/GetGridJson",
            postData: { queryJson: JSON.stringify(queryJson) },
            height: $(window).height() - 128,
            colModel: [
                { label: "主键", name: "F_Id", hidden: true, key: true },
                { label: '已读状态', name: 'IsReadOver', hidden: true, width: 50, align: 'center' },
                {
                    label: '消息类型', name: 'MsgType', width: 100, align: 'center', formatter: function (cellvalue, options, rowObject) {
                        return rowObject.MsgTypeName;
                    } },
                { label: '推送时间', name: 'SendTime', width: 130, align: 'left' },
                { label: '消息内容', name: 'Msg', width:1200, align: 'left', sortable: false },
                {
                    label: '查看消息', name: 'IsReadOver', width: 60, align: 'center', sortable: false,
                    formatter: function (cellvalue, options, rowObject) {
                        var detail = "";
                        if (rowObject.IsReadOver == "true") {
                            detail = "<div onclick=\"btn_details(\'" + rowObject.F_Id + "\')\" title='已读' class='fa fa-envelope-o' style='color:#336699;cursor:pointer;'></div>";
                        }
                        else {
                            detail = "<div onclick=\"btn_SetRead(\'" + rowObject.F_Id + "\')\" title='未读' class='fa fa-envelope' style='color:#336699;cursor:pointer;'></div>";
                        }
                        return detail;
                    },
                }
            ],
            pager: "#gridPager",
            sortname: 'F_CreatorTime desc',
        });

        $("#btn_search").click(function () {
            var queryJson = {
                keyword: $("#txt_keyword").val(),
                resultType: $("#result_horizon a.active").attr('data-value')
            }
            $gridList.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) },
            }).trigger('reloadGrid', { fromServer: true, page: 1 });
        });

        $("#result_horizon a.btn-default").click(function () {
            $("#result_horizon a.btn-default").removeClass("active");
            $(this).addClass("active");
            $('#btn_search').trigger("click");
        });
    }

    $(window).bind('resize', function () {
        $("#gridList").setGridWidth($(window).width());
        $("#gridList").setGridHeight($(window).height() - 126);
    });

    function btn_SetRead(rowID) {
        var keyValue = "";
        if (rowID == "" || rowID == undefined) {
            keyValue = $("#gridList").jqGridRowValue().F_Id;
            if (keyValue == undefined) {
                $.modalMsg("未选中数据", "error");
                return;
            }
        }
        else {
            keyValue = rowID;
        }

        $.ajaxWMS({
            url: "/PC_MsgManage/Msg/SetRead?keyValue=" + keyValue,
            data: {},
            dataType: "json",
            type: "POST",
            async: false,
            success: function (data) {
                if (data.state == "success") {
                    $.modalMsg(data.message, data.state);
                    $("#gridList").trigger("reloadGrid");
                    window.parent.GetInfoCount();
                    btn_details(keyValue);
                }
                else {
                    $.modalAlert(data.message, data.state);
                }
            }
        });
    }

    function btn_SetAllRead() {
        $.ajaxWMS({
            url: "/PC_MsgManage/Msg/SetAllRead",
            data: {},
            dataType: "json",
            type: "POST",
            async: false,
            success: function (data) {
                if (data.state == "success") {
                    $.modalMsg(data.message, data.state);
                    $("#gridList").trigger("reloadGrid");
                    window.parent.GetInfoCount();
                }
                else {
                    $.modalAlert(data.message, data.state);
                }
            }
        });
    }

    function btn_delete() {
        var keyValue = $("#gridList").jqGridRowValue().F_Id;
        if (keyValue == undefined) {
            $.modalMsg("未选中数据", "error");
            return;
        }
        $.deleteForm({
            url: "/PC_MsgManage/Msg/DeleteForm",
            param: { keyValue: keyValue },
            success: function () {
                $("#gridList").trigger("reloadGrid");
            }
        })
    }

    function btn_details(rowID) {
        var keyValue = "";
        if (rowID == "" || rowID == undefined) {
            keyValue = $("#gridList").jqGridRowValue().F_Id;
            if (keyValue == undefined) {
                $.modalMsg("未选中数据", "error");
                return;
            }
        }
        else {
            keyValue = rowID;
        }

        $.modalOpen({
            id: "Details",
            title: "查看消息",
            url: "/PC_MsgManage/Msg/Details?keyValue=" + keyValue,
            width: "750px",
            height: "550px",
            btn: null,
        });
    }
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="NF-allRead" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_SetAllRead()"><i class="fa fa-plus"></i>全部已读</a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
                <li><a id="NF-read" authorize="yes" onclick="btn_SetRead()"><i class="fa fa-pencil-square-o"></i>标记已读</a></li>
                <li><a id="NF-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除消息</a></li>
                <li>@*<a id="NF-Details" authorize="yes" onclick="btn_details()"><i class="fa fa-search-plus"></i>查看消息</a>*@</li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="消息内容" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
                <td style="padding-left: 10px;">
                    <div id="result_horizon" class="btn-group">
                        <a class="btn btn-default" data-value="1">全部</a>
                        <a class="btn btn-default  active" data-value="2">未查看</a>
                        <a class="btn btn-default" data-value="3">已查看</a>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>
