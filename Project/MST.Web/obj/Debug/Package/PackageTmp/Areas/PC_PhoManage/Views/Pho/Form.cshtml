@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}

<script>
    var keyValue = $.request("keyValue");
    $(function () {
        if (!!keyValue) {
            $.ajax({
                url: "/PC_PhoManage/Pho/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $.checkLogin(data);
                    $("#form1").formSerialize(data);
                }
            });
        }
        else {
            $.ajax({
                url: "/PC_PhoManage/Pho/GenNum",
                data: { ruleCode: "PhoRule" },
                dataType: "json",
                async: false,
                success: function (data) {
                    $.checkLogin(data);
                    data.PhoCode = data.Code;
                    data.Code = "";
                    $("#form1").formSerialize(data);
                }
            });
        }
    });



    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }

        $.submitForm({
            url: "/PC_PhoManage/Pho/SubmitForm?keyValue=" + keyValue,
            param: $("#form1").formSerialize(),
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            },
            error: function (data) {
                $.modalMsg(data.message, data.state);
            }
        })
    }
</script>

<form id="form1">
    <div style="padding-top: 20px; margin-right: 20px;">
        <table class="form">
            <tr>
                <th class="formTitle">快照编码</th>
                <td class="formValue">
                    <input id="PhoCode" name="PhoCode" type="text" class="form-control required" readonly="readonly" />
                </td>

                <th class="formTitle">快照名称</th>
                <td class="formValue">
                    <input id="PhoName" name="PhoName" type="text" class="form-control"  />
                </td>
            </tr>
            <tr>
                <th class="formTitle">备注</th>
                <td class="formValue" colspan="3">
                    <textarea id="PhoName" name="PhoName" type="text" class="form-control"></textarea>
                </td>
            </tr>
        </table>
    </div>
</form>