@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<style>
    .tablediv {
        margin: 30px 40px 0px 0px;
    }

    .ui-sghref > .glyphicon.glyphicon-triangle-right {
        padding-top: 8px;
    }

    .ui-sghref > .glyphicon.glyphicon-triangle-bottom {
        padding-top: 8px;
    }
</style>

<script>
    $(function () {
        $('#layout').layout();
        treeView();
        $($("#kindTree>div>div>ul>li>div")[0]).trigger("click");
        var id = $("#kindTree").getCurrentNode().id;

        gridList(id);

        $("#result_horizon a.btn-default").click(function () {
            $("#result_horizon a.btn-default").removeClass("active");
            $(this).addClass("active");
            $('#btn_search').trigger("click");
        });
    })

    function treeView() {
        $("#kindTree").treeview({
            url: "/PC_BaseDataManage/Item/GetTreeJson",
            onnodeclick: function (item) {
                $("#txt_keyword").val('');
                $('#btn_search').trigger("click");
            }
        });
    }

    function gridList(id) {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/PC_InventoryManage/Inventory/GetGridJson",
            height: $(window).height() - 128,
            colModel: [
                { label: "主键", name: "F_Id", hidden: true, key: true },
                { label: '物料编码', name: 'ItemCode', width: 70, align: 'left' },
                { label: '物料名称', name: 'ItemName', width: 280, align: 'left' },
                { label: '生产厂家', name: 'Factory', width: 240, align: 'left' },
                { label: '规格', name: 'Spec', width: 100, align: 'left' },
                { label: '批号', name: 'Lot', width: 100, align: 'left' },
                { label: '实物数量', name: 'Qty', width: 55, align: 'left' },
                { label: '待出库数', name: 'OutQty', width: 55, align: 'left' },
                { label: '取样数量', name: 'CheckQty', width: 55, align: 'left' },
                { label: '计量单位', name: 'ItemUnitText', width: 55, align: 'left' },
                { label: '失效日期', name: 'OverdueDate', width: 80, align: 'left', formatter: "date", formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' } },
                { label: '物料种类', name: 'KindName', width: 100, align: 'left' },
                { label: '供应商', name: 'SupplierName', width: 230, align: 'left' },
                { label: '质检状态', name: 'CheckState', width: 55, align: 'left', formatter: function (cellvalue, options, rowObject) { return rowObject.CheckStateName; } },
                { label: '库存状态', name: 'State', width: 55, align: 'left', formatter: function (cellvalue, options, rowObject) { return rowObject.StateName; } },
                { label: '质检冻结', name: 'IsCheckFreeze', width: 55, align: 'center', formatter: function (cellvalue) { return cellvalue == "true" ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>"; } },
                { label: '盘点冻结', name: 'IsCountFreeze', width: 55, align: 'center', formatter: function (cellvalue) { return cellvalue == "true" ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>"; } },
                {
                    label: 'ERP仓', name: 'ERPWarehouseCode', width: 80, align: 'left', formatter: function (cellvalue, options, rowObject) {
                        if (rowObject.ERPWarehouseName == null) { return ""; }
                        else { return rowObject.ERPWarehouseName; }
                    }
                },
                {
                    label: 'ERP入库单', name: 'ERPInDocCode', width: 120, align: 'left', formatter: function (cellvalue, options, rowObject) {
                        if (rowObject.RefInBoundCode == null) { return ""; }
                        else { return rowObject.RefInBoundCode; }
                    }
                },
                { label: '生产日期', name: 'ProductDate', width: 80, align: 'left', formatter: "date", formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' } },
                { label: '区域', name: 'AreaName', width: 80, align: 'left' },
                { label: '货位编码', name: 'LocationNo', width: 100, align: 'left' },
                { label: '容器类型', name: 'ContainerType', width: 160, align: 'left', formatter: function (cellvalue, options, rowObject) { return rowObject.ContainerTypeName; } },
                { label: '容器条码', name: 'BarCode', width: 100, align: 'left' },
                { label: '贴标条码', name: 'ItemBarCode', width: 100, align: 'left' },
                { label: '货位状态', name: 'LocationStateName', sortable: false, width: 55, align: 'left', formatter: function (cellvalue, options, rowObject) { return rowObject.LocationStateName; } },
                {
                    label: '入库来源单号', name: 'InBoundID', width: 120, align: 'left', formatter: function (cellvalue, options, rowObject) {
                        if (rowObject.RefInBoundCode == null) { return ""; }
                        else { return rowObject.RefInBoundCode; }
                    }
                },
            ],
            pager: "#gridPager",
            sortname: 'ItemCode asc,F_CreatorTime desc',
            viewrecords: true,
            postData: { kindId: id, keyword: "" }
        });

        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { kindId: $("#kindTree").getCurrentNode().id, keyword: $("#txt_keyword").val() },
            }).trigger('reloadGrid', { fromServer: true, page: 1 });
        });
    }

    $(window).bind('resize', function () {
        $("#gridList").setGridWidth($(window).width());
        $("#gridList").setGridHeight($(window).height() - 126);
    });

    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增库存",
            url: "/PC_InventoryManage/Inventory/Form",
            width: "650px",
            height: "520px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }

    function btn_edit() {
        var keyValue = $("#gridList").jqGridRowValue().F_Id;
        $.modalOpen({
            id: "Form",
            title: "修改库存",
            url: "/PC_InventoryManage/Inventory/Form?keyValue=" + keyValue,
            width: "600px",
            height: "520px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }

    function btn_delete() {
        $.deleteForm({
            url: "/PC_InventoryManage/Inventory/DeleteForm",
            param: { keyValue: $("#gridList").jqGridRowValue().F_Id },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }

    function btn_details() {
        var keyValue = $("#gridList").jqGridRowValue().F_Id;
        $.modalOpen({
            id: "Details",
            title: "查看库存",
            url: "/PC_InventoryManage/Inventory/Details?keyValue=" + keyValue,
            width: "600px",
            height: "520px",
            btn: null,
        });
    }
</script>
<div class="ui-layout" id="layout" style="height: 100%; width: 100%;">
    <div class="ui-layout-west">
        <div id="kindTree"></div>
    </div>
    <div class="ui-layout-center">

        <div class="topPanel">
            <div class="toolbar">
                <div class="btn-group">
                    <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
                </div>
                <div class="btn-group">
                    <a id="NF-add" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i>新增库存</a>
                </div>
                <div class="operate">
                    <ul class="nav nav-pills">
                        <li class="first">已选中<span>1</span>项</li>
                        <li><a id="NF-edit" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改库存</a></li>
                        <li><a id="NF-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除库存</a></li>
                        <li><a id="NF-Details" authorize="yes" onclick="btn_details()"><i class="fa fa-search-plus"></i>查看库存</a></li>
                    </ul>
                    <a href="javascript:;" class="close"></a>
                </div>
                <script>$('.toolbar').authorizeButton()</script>
            </div>
            <div class="search">
                <table>
                    <tr>
                        <td>
                            <div class="input-group">
                                <input id="txt_keyword" type="text" class="form-control" placeholder="物料编码 / 物料名称 / 批号 / 容器条码 / 货位编码 / 种类名称" style="width: 320px;">
                                <span class="input-group-btn">
                                    <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                                </span>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="gridPanel">
            <table id="gridList"></table>
            <div id="gridPager"></div>
        </div>
    </div>
</div>








