@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/PC_InventoryManage/OffLineDown/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $.checkLogin(data);
                    $("#form1").formSerialize(data);
                    $("#BarCode").attr("readonly", "readonly");
                    $("#ItemBarCode").attr("readonly", "readonly");
                }
            });
        }

        $.hideBaseData();
    });

    
    function initControl() {
        $("#State").bindSelect({
            url: "/SystemManage/ItemsData/GetDicList?entityName=T_OffLineDown&fieldName=State",
            id: "F_ItemCode",
            text: "F_ItemName"
        });
    }
    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        $.submitForm({
            url: "/PC_InventoryManage/OffLineDown/SubmitForm?keyValue=" + keyValue,
            param: $("#form1").formSerialize(),
            success: function () {
                $.currentWindow().$("#gridList").resetSelection();
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            },
            error: function (data) {
                $.modalMsg(data.message, data.state);
            }
        })
    }
</script>

<form id="form1">
    <div style="padding-top: 20px; margin-right: 20px;">
        <table class="form">
            <tr>
                <th class="formTitle">容器条码</th>
                <td class="formValue">
                    <input id="BarCode" name="BarCode" type="text"  class="form-control required" placeholder="请输入容器条码" />
                </td>
                <th class="formTitle">标签条码</th>
                <td class="formValue">
                    <input id="ItemBarCode" name="ItemBarCode" type="text"  class="form-control" placeholder="请输入标签条码" />
                </td>
            </tr>
            <tr>
                <th class="formTitle">应出数量</th>
                <td class="formValue">
                    <input id="Qty" name="Qty" type="text" class="form-control required" placeholder="应出数量(为0则全部拣选)" />
                </td>
                <th class="formTitle">上传时间</th>
                <td class="formValue">
                    <input id="F_CreatorTime" name="F_CreatorTime" type="text" readonly="readonly" class="form-control" placeholder="请输入上传时间" />
                </td>
            </tr>
            <tr>
                <th class="formTitle">离线状态</th>
                <td class="formValue">
                    <select id="State" name="State" class="form-control required">
                        <option value="">==请选择==</option>
                    </select>
                </td>
            </tr>
        </table>
    </div>
</form>
