@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>

    var areaID = $.request("areaID"); //区域ID

    $(function () {
        gridList();
    });

    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/PC_BaseDataManage/DevRow/GetGridJson?areaID=" + areaID,
            height: $(window).height() - 126,
            colModel: [
                { label: "主键", name: "F_Id", hidden: true, key: true },
                { label: '巷道编码', name: 'WayCode', width: 100, align: 'left' },
                { label: '巷道序号', name: 'Num', width: 100, align: 'left' },
                {
                    label: '当前游标', name: 'IsCursor', width: 100, align: 'center',
                    formatter: function (cellvalue) {
                        return cellvalue == "true" ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                    }
                }, {
                    label: '巷道内均分', name: 'IsEvenInnerTunnel', width: 100, align: 'center',
                    formatter: function (cellvalue) {
                        return cellvalue == "true" ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                    }
                },
                {
                    label: '行倒序', name: 'IsLineDesc', width: 100, align: 'center',
                    formatter: function (cellvalue) {
                        return cellvalue == "true" ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                    }
                },
                {
                    label: '是否启用', name: 'IsEnable', width: 100, align: 'center',
                    formatter: function (cellvalue) {
                        return cellvalue == "true" ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                    }
                },
                {
                    label: '系统数据', name: 'IsBase', width: 80, align: 'center',
                    formatter: function (cellvalue) {
                        return cellvalue == "true" ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                    }
                },
                {
                    label: '行详情', name: '', width: 80, align: 'center', sortable: false,
                    formatter: function (cellvalue, options, rowObject) {
                        var detail = "<div  onclick=\"btn_lineDetail(\'" + rowObject.F_Id + "\')\" title='行详情' class='fa fa-list' style='color:#336699;cursor:pointer;'></div>";
                        return detail;
                    }
                }
            ],
            pager: "#gridPager",
            sortname: 'F_CreatorTime desc',
            viewrecords: true,
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { areaID: areaID, keyword: $("#txt_keyword").val() },
            }).trigger('reloadGrid', { fromServer: true, page: 1 });
        });
    }

    $(window).bind('resize', function () {
        $("#gridList").setGridWidth($(window).width());
        $("#gridList").setGridHeight($(window).height() - 126);
    });

    function btn_lineDetail(wayID) {
        $.modalFixHightOpen({
            id: "FormList",
            title: "行详情",
            url: "/PC_BaseDataManage/RowLine/Index?areaID=" + areaID + "&keyValue=" + wayID,
            width: "800px",
            height: "580px",
            callBack: function (iframeId) {

            }
        });
    }

    function btn_add_Tunnel() {
        $.modalOpen({
            id: "Form",
            title: "新增巷道",
            url: "/PC_BaseDataManage/DevRow/Form?areaID=" + areaID,
            width: "550px",
            height: "380px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }

    function btn_edit_Tunnel() {
        var keyValue = $("#gridList").jqGridRowValue().F_Id;
        $.modalOpen({
            id: "Form",
            title: "修改巷道",
            url: "/PC_BaseDataManage/DevRow/Form?keyValue=" + keyValue,
            width: "600px",
            height: "480px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }

    function btn_delete_Tunnel() {
        $.deleteForm({
            url: "/PC_BaseDataManage/DevRow/DeleteForm",
            param: { keyValue: $("#gridList").jqGridRowValue().F_Id },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }

    function btn_details_Tunnel() {
        var keyValue = $("#gridList").jqGridRowValue().F_Id;
        $.modalOpen({
            id: "Details",
            title: "查看巷道",
            url: "/PC_BaseDataManage/DevRow/Details?keyValue=" + keyValue,
            width: "600px",
            height: "530px",
            btn: null,
        });
    }
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="NF-add" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_add_Tunnel()"><i class="fa fa-plus"></i>新建巷道</a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
                <li><a id="NF-Tunnel-edit" authorize="yes" onclick="btn_edit_Tunnel()"><i class="fa fa-pencil-square-o"></i>修改巷道</a></li>
                <li><a id="NF-Tunnel-delete" authorize="yes" onclick="btn_delete_Tunnel()"><i class="fa fa-trash-o"></i>删除巷道</a></li>
                <li><a id="NF-Tunnel-index" authorize="yes" onclick="btn_details_Tunnel()"><i class="fa fa-search-plus"></i>查看巷道</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="巷道编码" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>
