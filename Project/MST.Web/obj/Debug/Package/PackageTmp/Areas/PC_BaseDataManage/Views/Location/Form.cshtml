@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    var areaId = $.request("areaId");
    var areaName = unescape($.request("areaName"));
    var IsERPPy = false;
    var IsCheckPy = false;

    $(function () {
        initControl();

        $("#AreaName").val(areaName);
        if (!!keyValue) {
            $.ajax({
                url: "/PC_BaseDataManage/Location/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $.checkLogin(data);
                    $("#form1").formSerialize(data);
                    if (data.IsCurSysUser == false) {
                        $("#State").select2({ "disabled": "readonly" });
                        $("#High").attr("readonly", "readonly");
                        $("#Weight").attr("readonly", "readonly");
                        $("#Width").attr("readonly", "readonly");
                    }
                }
            });
        }

        $.ajax({
            url: "/PC_BaseDataManage/Location/GetERPPhy",
            data: { areaId: areaId },
            dataType: "json",
            async: false,
            success: function (data) {
                IsERPPy = data.IsERPPy;
                IsCheckPy = data.IsCheckPy;
                if (IsERPPy == false) { //ERP区域不视作物理区域
                    $(".ERPHouseCodeDiv").hide();
                }

                if (IsCheckPy == false) { //质检区域不视作物理区域
                    $(".CheckPy").hide();
                }

                if (IsERPPy == false && IsCheckPy == false) {
                    $(".ERPAndCheckPy").hide();
                }
            }
        });

        $.hideBaseData();
    });

    function initControl() {
        $("#State").bindSelect({
            url: "/SystemManage/ItemsData/GetDicList?entityName=T_Location&fieldName=State",
            id: "F_ItemCode",
            text:"F_ItemName"
        });

        $("#ForbiddenState").bindSelect({
            url: "/SystemManage/ItemsData/GetDicList?entityName=T_Location&fieldName=ForbiddenState",
            id: "F_ItemCode",
            text: "F_ItemName"
        });

        $("#LocationType").bindSelect({
            url: "/SystemManage/ItemsData/GetDicList?entityName=T_Location&fieldName=LocationType",
            id: "F_ItemCode",
            text: "F_ItemName",
            search: true
        });

        $("#ERPHouseCode").bindSelect({
            url: "/PC_BaseDataManage/Location/GetErpHouseDicList",
            id: "ERPHouseCode",
            text: "ERPHouseName"
        });

        $("#CheckPyType").bindSelect({
            url: "/SystemManage/ItemsData/GetDicList?entityName=T_Location&fieldName=CheckPyType",
            id: "F_ItemCode",
            text: "F_ItemName"
        });
    }

    //批量新增
    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        var postData = $("#form1").formSerialize();
        postData["AreaID"] = areaId;
        postData["AreaName"] = areaName;
        $.submitForm({
            url: "/PC_BaseDataManage/Location/SubmitForm?keyValue=" + keyValue,
            param: postData,
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            },
            error: function (data) {
                $.modalMsg(data.message, data.state);
            }
        })
    }
</script>

<form id="form1">
    <div style="margin-bottom: 0px; border-radius: 0px;" class="alert alert-warning alert-dismissable">
        <strong>注意：</strong>&nbsp;货位长度、宽度、高度若为0，则只可存放对应维度范围也为0的容器(维度最大值、最小值必须同时为0)
    </div>
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">
                <tr>
                    <th class="formTitle">货位编码</th>
                    <td class="formValue">
                        <input id="LocationCode" name="LocationCode" type="text" class="form-control" readonly="readonly" placeholder="请输入货位编码" />
                    </td>
                    <th class="formTitle">货位类型</th>
                    <td class="formValue">
                        <select id="LocationType" name="LocationType" disabled class="form-control required">
                            <option value="">==请选择==</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">行</th>
                    <td class="formValue">
                        <input id="Line" name="Line" type="number" min="1" class="form-control" readonly="readonly" placeholder="请输入行" />
                    </td>
                    <th class="formTitle">列</th>
                    <td class="formValue">
                        <input id="ColNum" name="ColNum" type="number" min="1" class="form-control" readonly="readonly" placeholder="请输入列" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">层</th>
                    <td class="formValue">
                        <input id="Layer" name="Layer" type="number" min="1" class="form-control" readonly="readonly" placeholder="请输入层" />
                    </td>
                    <th class="formTitle">载重</th>
                    <td class="formValue">
                        <input id="Weight" name="Weight" type="number" min="0" class="form-control" placeholder="请输入载重" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">货位高度</th>
                    <td class="formValue">
                        <input id="High" name="High" type="number" min="0" class="form-control" placeholder="请输入货位高度" />
                    </td>
                    <th class="formTitle">货位宽度</th>
                    <td class="formValue">
                        <input id="Width" name="Width" type="number" min="0" class="form-control" placeholder="请输入货位宽度" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">货位状态</th>
                    <td class="formValue">
                        <select id="State" name="State" class="form-control required">
                            <option value="">==请选择==</option>
                        </select>
                    </td>
                    <th class="formTitle">禁用状态</th>
                    <td class="formValue">
                        <select id="ForbiddenState" name="ForbiddenState" class="form-control required">
                            <option value="">==请选择==</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">WCS货位编码</th>
                    <td class="formValue">
                        <input id="WCSLocCode" name="WCSLocCode" type="text" class="form-control" placeholder="请输入WCS货位编码" />
                    </td>
                </tr>
                <tr class="ERPAndCheckPy">
                    <th class="formTitle ERPHouseCodeDiv">ERP物理区域</th>
                    <td class="formValue ERPHouseCodeDiv">
                        <select id="ERPHouseCode" name="ERPHouseCode" class="form-control required">
                            <option value="">==请选择==</option>
                        </select>
                    </td>

                    <th class="formTitle CheckPy">质检物理区域</th>
                    <td class="formValue CheckPy">
                        <select id="CheckPyType" name="CheckPyType" class="form-control required">
                            <option value="">==请选择==</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">选项</th>
                    <td class="formValue" colspan="3">
                        <div class="ckbox">
                            <input id="IsDampproof" name="IsDampproof" sysbasedata="yes" type="checkbox"><label for="IsDampproof">防潮</label>
                        </div>
                        <div class="ckbox">
                            <input id="IsItemPriority" name="IsItemPriority" sysbasedata="yes" type="checkbox" ><label for="IsItemPriority">靠窗</label>
                        </div>
                        <div class="ckbox">
                            <input id="IsLocTop" name="IsLocTop" sysbasedata="yes" type="checkbox" ><label for="IsLocTop">顶层</label>
                        </div>
                        <div class="ckbox">
                            <input id="IsBase" name="IsBase" sysbasedata="yes" type="checkbox" checked="checked"><label for="IsBase">系统数据</label>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>

