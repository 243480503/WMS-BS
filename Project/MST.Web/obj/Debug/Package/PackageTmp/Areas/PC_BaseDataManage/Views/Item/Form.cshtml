    <tr>
        <th class="formTitle">存放区域</th>
        <td class="formValue" colspan="3">
            <select name="StoredAreaList" id="StoredAreaList" type="select2" multiple="multiple" class="selectpicker form-control required">
            </select>
        </td>
    </tr>
    <tr>
        <th class="formTitle">入库站台</th>
        <td class="formValue" colspan="3">
            <select name="InStationList" id="InStationList" type="select2" multiple="multiple" class="selectpicker form-control required">
