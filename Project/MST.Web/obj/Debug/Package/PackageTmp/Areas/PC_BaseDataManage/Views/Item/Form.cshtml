@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    var kindId = $.request("kindId");
    var kindName = unescape($.request("kindName"));



    $(function () {
        $("#KindName").val(kindName);
        initControl();
        $("#ItemKindID").val(kindId).trigger('change');
        $("#IsNeedCheck").change(function () {
            if ($("#IsNeedCheck").is(":checked") == true) {
                $("#IsBroken").removeAttr("disabled");
            }
            else {
                $("#IsBroken").attr("checked", false);
                $("#IsBroken").attr("disabled", "disabled");
            }
        });

        if (!!keyValue) {
            $.ajax({
                url: "/PC_BaseDataManage/Item/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $.checkLogin(data);
                    //如果允许多个入库站台或存储区域，请取消注释，并注释其它多余代码
                    // $("#form1").formSerialize(data, [{ "id": "StoredAreaList", "key": "AreaID" }, { "id": "InStationList", "key": "StationID" }]);

                    if (data.StoredAreaList.length > 0) {
                        data.StoredAreaList = data.StoredAreaList[0].AreaID;
                    }
                    if (data.InStationList.length > 0) {
                        data.InStationList = data.InStationList[0].StationID;
                    }
                    if (data.IsNeedCheck == "true") {
                        $("#IsBroken").removeAttr("disabled");
                    }
                    else {
                        $("#IsBroken").attr("disabled", "disabled");
                    }

                    $("#form1").formSerialize(data);
                    $("#ItemCode").attr("disabled", "disabled");

                    var selectText = $("#ContainerType").select2('data')[0].text;
                    if (selectText.indexOf("料箱") < 0 && selectText.indexOf("料架") < 0) {
                        $("#IsItemMark").removeAttr("checked").attr("disabled", "disabled"); //纸箱不支持单个物料贴标
                    }
                    else {
                        $("#IsItemMark").removeAttr("disabled");
                    }
                }
            });
        }
        $("#InStationList").select2({ "disabled": "readonly" });
        $("#StoredAreaList").select2({ "disabled": "readonly" });
        $.hideBaseData();

        $("#ContainerType").change(function (e) {
            var val = $("#ContainerType").select2().val();
            if (val != "") {
                $.ajaxWMS({
                    url: "/PC_BaseDataManage/Item/GetDefInStationAndStoredAreaList?containerTypeCode=" + val,
                    data: {},
                    dataType: "json",
                    type: "Get",
                    async: false,
                    success: function (data) {
                        $("#InStationList").val(data.InStation.F_Id).trigger("change");
                        $("#StoredAreaList").val(data.AreaEntity.F_Id).trigger("change");
                        var selectText = $("#ContainerType").select2('data')[0].text;
                        if (selectText.indexOf("料箱") < 0 && selectText.indexOf("料架") < 0) {
                            $("#IsItemMark").removeAttr("checked").attr("disabled", "disabled");
                        }
                        else {
                            $("#IsItemMark").removeAttr("disabled");
                        }

                    }
                });
            }
            else {
                $("#InStationList").val("").trigger("change");
                $("#StoredAreaList").val("").trigger("change");
            }
        });
    });



    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        var postData = $("#form1").formSerialize();
        postData["ItemKindID"] = kindId;
        //如果允许多个入库站台或存储区域，请取消注释，并注释其它多余代码
        //$.each(postData["StoredAreaList"], function (i, n) {
        //    postData["StoredAreaList[" + i + "].AreaID"] = n;
        //});

        //$.each(postData["InStationList"], function (i, n) {
        //    postData["InStationList[" + i + "].StationID"] = n;
        //});
        postData["StoredAreaList[0].AreaID"] = postData["StoredAreaList"];
        postData["InStationList[0].StationID"] = postData["InStationList"];
        delete postData.StoredAreaList;
        delete postData.InStationList;
        $.submitForm({
            url: "/PC_BaseDataManage/Item/SubmitForm?keyValue=" + keyValue,
            param: postData,
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            },
            error: function (data) {
                $.modalMsg(data.message, data.state);
            }
        })
    }
    function initControl() {
        $("#InStationList").bindSelect({
            url: "/PC_BaseDataManage/Item/GetStationDicList",
            id: "F_Id",
            text: "StationName",
            search: false
        });

        $("#StoredAreaList").bindSelect({
            url: "/PC_BaseDataManage/Item/GetAreaDicList",
            id: "F_Id",
            text: "AreaName",
            search: false
        });

        $("#ContainerType").bindSelect({
            url: "/PC_BaseDataManage/Item/GetContainerDicList",
            id: "ContainerTypeCode",
            text: "ContainerTypeName",
            search: true
        });

        $("#ItemKindID").bindSelect({
            url: "/PC_BaseDataManage/ItemKind/GetTreeSelectJson",
            search: true
        });

        $("#ValidityUnitType").bindSelect({
            url: "/SystemManage/ItemsData/GetDicList?entityName=T_Item&fieldName=ValidityUnitType",
            id: "F_ItemCode",
            text: "F_ItemName"
        });
    }
</script>

