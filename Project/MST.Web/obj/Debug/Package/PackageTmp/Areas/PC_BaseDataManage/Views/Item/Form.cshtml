                    <td class="formValue">
                        <select id="ValidityUnitType" name="ValidityUnitType" class="form-control required">
                            <option value="">==请选择==</option>
                        </select>
                    </td>
                </tr>
                <tr>

                    <th class="formTitle">生产厂家</th>
                    <td class="formValue">
                        <input id="Factory" name="Factory" type="text" class="form-control" placeholder="请输入生产厂家" />
                    </td>
                </tr>
