@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/PC_InBoundManage/InBound/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $.checkLogin(data);
                    $("#form1").formSerialize(data);
                    $("#State").attr("disabled", "disabled");
                    if ($("#State").val() != 'New') {
                        $("#form1").find('.form-control,select,input').attr('disabled', 'readonly');
                    }
                }
            });
        }
        else {
            $.ajax({
                url: "/PC_InBoundManage/InBound/GenNum",
                data: { ruleCode: "InBoundRule" },
                dataType: "json",
                async: false,
                success: function (data) {
                    $.checkLogin(data);
                    var dataSer = { "InBoundCode": data.Code,"State":"New" };
                    $("#form1").formSerialize(dataSer);
                    $("#State").attr("disabled","disabled");
                }
            });
        }
    });

    function initControl() {
        $("#State").bindSelect({
            url: "/SystemManage/ItemsData/GetDicList?entityName=T_InBound&fieldName=State",
            id: "F_ItemCode",
            text: "F_ItemName"
        });

        $("#SupplierUserID").bindSelect({
            url: "/PC_InBoundManage/InBound/GetSupplierList",
            id: "F_Id",
            text: "SupplierName",
            search: true
        });

        $("#InBoundType").bindSelect({
            url: "/SystemManage/ItemsData/GetDicList?entityName=T_InBound&fieldName=InBoundType",
            id: "F_ItemCode",
            text: "F_ItemName"
        });
    }

    function submitForm(rowid) {
        if (!$('#form1').formValid()) {
            return false;
        }

        $.submitForm({
            url: "/PC_InBoundManage/InBound/SubmitForm?keyValue=" + keyValue,
            param: $("#form1").formSerialize(),
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            },
            error: function (data) {
                $.modalMsg(data.message, data.state);
            }
        })
    }
</script>

<form id="form1">
    <div style="padding-top: 20px; margin-right: 20px;">
        <table class="form">
            <tr>
                <th class="formTitle">入库单编码</th>
                <td class="formValue">
                    <input id="InBoundCode" name="InBoundCode" readonly="readonly" type="text" class="form-control required" placeholder="请输入订单编码" />
                </td>
                <th class="formTitle">来源单号</th>
                <td class="formValue">
                    <input id="RefOrderCode" name="RefOrderCode" type="text" class="form-control" placeholder="请输入来源单号" />
                </td>
            </tr>
            <tr>
                <th class="formTitle">供应商</th>
                <td class="formValue">
                    <select id="SupplierUserID" name="SupplierUserID" class="form-control required">
                        <option value="">==请选择==</option>
                    </select>
                </td>
                <th class="formTitle">单据类型</th>
                <td class="formValue">
                    <select id="InBoundType" name="InBoundType"  class="form-control required">
                        <option value="">==请选择==</option>
                    </select>
                </td>
            </tr>
            <tr>
                <th class="formTitle">订单状态</th>
                <td class="formValue">
                    <select id="State" name="State"  class="form-control required">
                        <option value="">==请选择==</option>
                    </select>
                </td>
            </tr>
            <tr>
                <th class="formTitle">备注</th>
                <td class="formValue" colspan="3">
                    <textarea id="Remark" name="Remark" class="form-control" style="height: 60px;"></textarea>
                </td>
            </tr>
        </table>
    </div>
</form>
