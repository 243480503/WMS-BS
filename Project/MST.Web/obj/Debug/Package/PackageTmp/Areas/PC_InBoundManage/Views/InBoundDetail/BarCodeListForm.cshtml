<script>
    var keyValue = $.request("keyValue");
    $(function () {
        getOrderDetailInfo();
        gridList();
    })
    var oldNum = 0;
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/PC_InBoundManage/InBoundDetail/GetPrintBarCodeList?InBoundDetailID=" + keyValue,
            height: $(window).height() - 126,
            colModel: [
                { label: "主键", name: "F_Id", hidden: true, key: true },
                { label: '物料编码', name: 'ItemCode', width: 80, align: 'left' },
                { label: '物料名称', name: 'ItemName', width: 280, align: 'left' },
                { label: '批号', name: 'Lot', width: 70, align: 'left' },
                { label: '标签编码', name: 'BarCode', width: 100, align: 'left'},
                {
                    label: "是否使用", name: "IsUsed", width: 60, align: 'center',
                    formatter: function (cellvalue) {
                        return cellvalue == "true" ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                    } },
                {
                    label: "是否手动", name: "IsHandPrint", width: 60, align: 'center',
                    formatter: function (cellvalue) {
                        return cellvalue == "true" ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                    } },
                {
                    label: "数量", name: "Qty", width: 100, align: 'left', editable: true,
                        editoptions: {
                        size: 1,
                        width: 30,
                        type: "Number",
                        class: "form-control required",
                        dataEvents: [{
                            type: 'change',
                            fn: function (e) {
                                
                            }
                        }, {
                            type: 'focus',
                            fn: function (e) {
                                oldNum = parseFloat(this.value);
                                $(this).select();
                            }
                        }, {
                            type: "blur",
                            fn: function (e) {
                                var id = $("#gridList").jqGridRowValue().F_Id;
                                $gridList.jqGrid('saveRow', id, null, "clientArray");
                            }
                        }]
                    } }
            ],
            pager: "#gridPager",
            sortname: 'BarCode asc',
            viewrecords: true,
            beforeSelectRow: function (rowid, e) {
                var rows = $gridList.jqGrid("getRowData");
                $.each(rows, function (i, n) {
                    if (n.F_Id != rowid) {
                        $gridList.jqGrid('saveRow', n.F_Id, null, "clientArray");
                    }
                });

                var curRows = $gridList.jqGrid("getRowData", rowid);
                if ($("#NF-add").css("display")!="none" && $(curRows.IsHandPrint).hasClass("fa-toggle-on") && $(curRows.IsUsed).hasClass("fa-toggle-on") == false) {
                    return true;
                }
                else {
                    return false;
                }
            },
            customEdit: true
        });

        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val() },
            }).trigger('reloadGrid', { fromServer: true, page: 1 });
        });
    }

    //获取入库单明细信息
    function getOrderDetailInfo() {
        $.ajaxWMS({
            url: "/PC_InBoundManage/InBoundDetail/GetOrderDetailInfo?InBoundDetailID=" + keyValue,
            data: {},
            dataType: "json",
            type: "GET",
            async: false,
            success: function (data) {
                if (data.IsSplitModel == "true") {
                    $("#NF-add").show();
                    $("#NF-split").text("切换为整箱");
                }
                else {
                    $("#NF-add").hide();
                    $("#NF-split").text("切换为散箱");
                }
            }
        });
    }

    //切换散箱或整箱模式
    function btn_split() {
        $.ajaxWMS({
            url: "/PC_InBoundManage/InBoundDetail/ChangeSplitModel?InBoundDetailID=" + keyValue,
            data: {},
            dataType: "json",
            type: "POST",
            async: false,
            success: function (data) {
                if (data.IsSplitModel == "true") {
                    $("#NF-add").show();
                    $("#NF-split").text("切换为整箱");
                }
                else {
                    $("#NF-add").hide();
                    $("#NF-split").text("切换为散箱");
                }
            }
        });
    }

    //删除标签
    function btn_delete() {
        var keyValue = $("#gridList").jqGridRowValue().F_Id;
        $.ajaxWMS({
            url: "/PC_InBoundManage/InBoundDetail/DelBarCode?markRecordID=" + keyValue,
            data: {},
            dataType: "json",
            type: "POST",
            async: false,
            success: function (data) {
                if (data.state == "success") {
                    $.modalMsg(data.message, data.state);
                    $("#gridList").trigger("reloadGrid");
                }
                else {
                    $.modalAlert(data.message, data.state);
                }
            }
        });
    }

    //手动新增标签记录
    function btn_add() {
        $.ajaxWMS({
            url: "/PC_InBoundManage/InBoundDetail/AddBarCode",
            data: { InBoundDetailID: keyValue},
            dataType: "json",
            type: "POST",
            async: false,
            success: function (data) {
                if (data.state == "success") {
                    $.modalMsg(data.message, data.state);
                    $("#gridList").trigger("reloadGrid");
                }
                else {
                    $.modalAlert(data.message, data.state);
                }
            }
        });
    }

