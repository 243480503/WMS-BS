@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script src="~/Content/js/datepicker/WdatePicker.js"></script>

<style>
    .tablediv {
        margin: 30px 40px 0px 0px;
    }

    .ui-sghref > .glyphicon.glyphicon-triangle-right {
        padding-top: 8px;
    }

    .ui-sghref > .glyphicon.glyphicon-triangle-bottom {
        padding-top: 8px;
    }
</style>

<script>
    $(function () {
        gridList();
    })

    function gridList() {

        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/PC_ReportManage/InOutWaterBySuppItem/GetGridJson",
            height: $(window).height() - 128,
            colModel: [
                { label: "主键", name: "F_Id", hidden: true, key: true },
                { label: '物料编码', name: 'ItemCode', width: 100, align: 'left' },
                { label: '物料名称', name: 'ItemName', width: 280, align: 'left' },
                { label: '物料类型', name: 'KindName', width: 100, align: 'left' },
                { label: '生产厂家', name: 'Factory', width: 250, align: 'left' },
                { label: '供应商', name: 'SupplierName', width: 250, align: 'left' },
                { label: '规格', name: 'Spec', width: 80, align: 'left' },
                { label: '计量单位', name: 'ItemUnitText', width: 80, align: 'left' },
                { label: '总数量', name: 'SumQty', width: 80, align: 'left' }
            ],
            pager: "#gridPager",
            sortname: 'ItemCode asc',
            viewrecords: true,
            rowNum: 999999,
            footerrow: true,//设置属性，显示统计行
            gridComplete: function () {
                var rows = $gridList.jqGrid("getRowData");
                var sumTotal = 0;
                for (var i = 0; i < rows.length; i++) {
                    sumTotal = parseInt(rows[i].SumQty) + sumTotal;
                }
                $gridList.jqGrid("footerData", "set", { ItemCode: "合计：", SumQty: sumTotal });
            }
        });

        $("#btn_search").click(function () {
            var begin = $("#txt_Begin").val();
            var end = $("#txt_End").val();
            var supplierName = $("#txt_SupplierName").val();
            var factoryName = $("#txt_FactoryName").val();
            var itemName = $("#txt_ItemName").val();
            var inOutTypeVal = $("#result_horizon a.active").attr('data-value');
            var inOutType = "";
            if (inOutTypeVal == "1") {
                inOutType = "InType";
            }
            else {
                inOutType = "OutType";
            }

            if (begin != null && end != null) {
                if (new Date(begin) > new Date(end)) {
                    $.modalMsg("开始时间应小于或等于结束时间", "error");
                    return;
                }
            }

            $gridList.jqGrid('setGridParam', {
                postData: { begin: begin, end: end, supplierName: supplierName, itemName: itemName, factoryName: factoryName, inOutType: inOutType },
            }).trigger('reloadGrid', { fromServer: true, page: 1 });
        });

        $("#result_horizon a.btn-default").click(function () {
            $("#result_horizon a.btn-default").removeClass("active");
            $(this).addClass("active");
            $('#btn_search').trigger("click");
        });
    }

    $(window).bind('resize', function () {
        $("#gridList").setGridWidth($(window).width());
        $("#gridList").setGridHeight($(window).height() - 126);
    });


    function btn_down() {
        var begin = $("#txt_Begin").val();
        var end = $("#txt_End").val();
        var supplierName = $("#txt_SupplierName").val();
        var factoryName = $("#txt_FactoryName").val();
        var itemName = $("#txt_ItemName").val();
        var inOutTypeVal = $("#result_horizon a.active").attr('data-value');
        var inOutType = "";
        if (inOutTypeVal == "1") {
            inOutType = "InType";
        }
        else {
            inOutType = "OutType";
        }

        var postdata = {};
        postdata.begin = begin;
        postdata.end = end;
        postdata.supplierName = supplierName;
        postdata.factoryName = factoryName;
        postdata.itemName = itemName;
        postdata.inOutType = inOutType;

        if (postdata.begin != null && postdata.end != null) {
            if (new Date(postdata.begin) > new Date(postdata.end)) {
                $.modalMsg("开始时间应小于或等于结束时间", "error");
                return;
            }
        }

        if ($('[name=__RequestVerificationToken]').length > 0) {
            postdata["__RequestVerificationToken"] = $('[name=__RequestVerificationToken]').val();
        }
        $.ajax({
            url: "/PC_ReportManage/InOutWaterBySuppItem/DownFile",
            data: postdata,
            dataType: "json",
            type: "Get",
            async: false,
            success: function (data) {
                $("body").append($("<iframe/>").css("display", "none").attr("src", data.Path));
            }
        });
    }
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="NF-add-down"  class="btn btn-primary dropdown-text" onclick="btn_down()"><i class="fa fa-download"></i>下载</a>
        </div>
