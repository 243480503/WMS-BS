@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<style>
    .tablediv {
        margin: 30px 40px 0px 0px;
    }

    .ui-sghref > .glyphicon.glyphicon-triangle-right {
        padding-top: 8px;
    }

    .ui-sghref > .glyphicon.glyphicon-triangle-bottom {
        padding-top: 8px;
    }
</style>
<script>
    $(function () {
        gridList();
    })

    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/PC_ReportManage/InOutWaterReport/GetGridJson?InBoundDetailID",
            height: $(window).height() - 120,
            colModel: [
                { label: "主键", name: "F_Id", hidden: true, key: true },
                { label: '物料编码', name: 'ItemCode', width: 80, align: 'left' },
                { label: '物料名称', name: 'ItemName', width: 280, align: 'left' },
                { label: '生产厂家', name: 'Factory', width: 250, align: 'left' },
                { label: '规格', name: 'Spec', width: 120, align: 'left' },
                { label: '批号', name: 'Lot', width: 100, align: 'left' },
                { label: '原数量', name: 'Qty', width: 50, align: 'left' },
                { label: '变动数量', name: 'ChangeQty', width: 50, align: 'left' },
                { label: '变动后数量', name: 'AfterChangeQty', width: 50, align: 'left' },
                { label: "计量单位", name: "ItemUnitText", width: 60, align: 'left' },
                { label: '失效日期', name: 'OverdueDate', width: 80, align: 'left', formatter: "date", formatoptions: { newformat: 'Y-m-d' } },
                { label: '出入库类型', name: 'InOutType', width: 70, align: 'left', formatter: function (cellvalue, options, rowObject) { return rowObject.InOutTypeName; } },
                { label: '变动单类型', name: 'OrderType', width: 70, align: 'left', formatter: function (cellvalue, options, rowObject) { return rowObject.OrderTypeName; } },
                { label: '物料种类', name: 'KindName', width: 100, align: 'left' },
                { label: '供应商', name: 'SupplierName', width: 250, align: 'left' },
                { label: '生产日期', name: 'ProductDate', width: 80, align: 'left', formatter: "date", formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' }},
                { label: '区域编码', name: 'AreaCode', width: 80, align: 'left', hidden: true },
                { label: '区域名称', name: 'AreaName', width: 80, align: 'left' },
                { label: '容器编码', name: 'BarCode', width: 100, align: 'left' },
                { label: '贴标条码', name: 'ItemBarCode', width: 100, align: 'left' },
                //{ label: '入库来源单', name: 'InBoundRefCode', width: 100, align: 'left' },
                { label: '相关任务', name: 'TaskNo', width: 120, align: 'left' },
                { label: '原货位', name: 'LocationNo', width: 100, align: 'left' },
                //{ label: '变动单据', name: 'OrderRefCode', width: 100, align: 'left' },
                { label: '创建时间', name: 'F_CreatorTime', width: 150, align: 'left' },
                { label: '备注', name: 'Remark', width: 300, align: 'left' }
            ],
            pager: "#gridPager",
            sortname: 'F_CreatorTime desc',
            viewrecords: true
        });

        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val() },
            }).trigger('reloadGrid', { fromServer: true, page: 1 });
        });
    }

    $(window).bind('resize', function () {
        $("#gridList").setGridWidth($(window).width());
        $("#gridList").setGridHeight($(window).height() - 126);
    });
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="容器编码 / 变动单据" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>
