@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}

<style>
    .tablediv {
        margin: 30px 40px 0px 0px;
    }

    .ui-sghref > .glyphicon.glyphicon-triangle-right {
        padding-top: 8px;
    }

    .ui-sghref > .glyphicon.glyphicon-triangle-bottom {
        padding-top: 8px;
    }
</style>

<script>
    var CountID = $.request("keyvalue");
    $(function () {
        gridList();
    })

    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/PC_CountManage/CountDetail/GetGridJson?CountID=" + CountID,
            height: $(window).height() - 126,
            colModel: [
                { label: "主键", name: "F_Id", hidden: true, key: true },
                { label: '盘点单ID', name: 'CountID', hidden: true },
                { label: '项次', name: 'SEQ', width: 50, align: 'left' },
                { label: '物料编码', name: 'ItemCode', width: 70, align: 'left' },
                { label: '物料名称', name: 'ItemName', width: 170, align: 'left' },
                { label: '生产厂家', name: 'Factory', width: 170, align: 'left' },
                { label: '规格', name: 'Spec', width: 100, align: 'left' },
                { label: '批号', name: 'Lot', width: 80, align: 'left' },
                { label: "计量单位", name: "ItemUnitText", width: 55, align: 'left' },
                { label: '失效日期', name: 'OverdueDate', width: 65, align: 'left', formatter: "date", formatoptions: { newformat: 'Y-m-d' } },
                { label: "原数量", name: "Qty", width: 60, align: 'center' },
                { label: "盘点数量", name: "CountQty", width: 60, align: 'center' },
                {
                    label: '盘点记录', name: '', width: 55, align: 'center', sortable: false,
                    formatter: function (cellvalue, options, rowObject) {
                        var detail = "<div  onclick=\"btn_countRecord(\'" + rowObject.F_Id + "\')\" title='盘点记录' class='fa fa-list' style='color:#336699;cursor:pointer;'></div>";
                        return detail;
                    },
                },
                { label: '盘点状态', name: 'CountState', width: 65, align: 'left', formatter: function (cellvalue, options, rowObject) { return rowObject.StateName; } },
                { label: '审核状态', name: 'AuditState', width: 55, align: 'left', formatter: function (cellvalue, options, rowObject) { return rowObject.AuditStateName; } },
                { label: '供应商名称', name: 'SupplierUserName', width: 150, align: 'left' },
                { label: "容器类型", name: "ContainerKindName", width: 80, align: 'center', sortable: false },
                {
                    label: '盘点地点', name: 'StationID', width: 100, align: 'center',
                    formatter: function (cellvalue, options, rowObject) {
                        if (rowObject.StationCode == "StationOut_Normal") { //出库站台正常
                            return '<span class=\"label label-success\">' + rowObject.StationName + '</span>';
                        } else if (rowObject.StationCode == "StationOut_BigItem") { //出库站台(大件)
                            return '<span class=\"label label-info\">' + rowObject.StationName + '</span>';
                        } else if (rowObject.StationCode == "") { //AGV 在库盘点
                            return '<span class=\"label label-default\">' + 'AGV在库盘点' + '</span>';
                        }
                        else {
                            return cellvalue;
                        }
                    }
                },
            ],
            pager: "#gridPager",
            sortname: 'SEQ asc',
            viewrecords: true,
        });

        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val() },
            }).trigger('reloadGrid', { fromServer: true, page: 1 });
        });
    }

    $(window).bind('resize', function () {
        $("#gridList").setGridWidth($(window).width());
        $("#gridList").setGridHeight($(window).height() - 126);
    });

    function btn_countRecord(countdetailID) {
        $.modalFixHightOpen({
            id: "Form",
            title: "盘点记录",
            url: "/PC_CountManage/CountRecord/Index?keyvalue=" + countdetailID,
            width: "1480px",
            height: "850px",
            callBack: function (iframeId) {

            }
        });
    }

    function btn_add() {
        $.modalFixHightOpen({
            id: "Form",
            title: "维护明细",
            url: "/PC_CountManage/CountDetail/TransferForm?CountID=" + CountID,
            width: "1400px",
            height: "800px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm(function () {
                    $("#gridList").trigger("reloadGrid");
                });
            }
        });
    }

    function btn_edit() {
        var keyValue = $("#gridList").jqGridRowValue().F_Id;
        if (keyValue == null) {
            $.modalMsg("请选择数据", "warning");
            return;
        }
        $.modalFixHightOpen({
            id: "Form",
            title: "修改明细",
            url: "/PC_CountManage/CountDetail/TransferForm?CountID=" + CountID + "&keyValue=" + keyValue,
            width: "1250px",
            height: "680px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm(function () {
                    $("#gridList").trigger("reloadGrid");
                });
            }
        });
    }

    function btn_delete() {
        var rowid = $("#gridList").jqGridRowValue().F_Id;
        if (rowid == null) {
            $.modalMsg("请选择数据", "warning");
            return;
        }
        $.deleteForm({
            url: "/PC_CountManage/CountDetail/DeleteForm",
            param: { keyValue: rowid },
            success: function () {
                $("#gridList").trigger("reloadGrid");
            }
        })
    }
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="NF-add-detail" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i>维护明细</a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
                <li><a id="NF-edit-detail" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改明细</a></li>
                <li><a id="NF-delete-detail" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除明细</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="物料名称 / 物料编码" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>
