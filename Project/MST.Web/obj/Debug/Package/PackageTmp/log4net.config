<?xml version="1.0" encoding="utf-8"?>
<!--日志文件的配置-->
<log4net outdate_days="7">
	<!--系统-->
	<logger name="log_sys">
		<level value="ALL" />
		<appender-ref ref="sysAppender" />
	</logger>
	<!--错误-->
	<logger name="log_err">
		<level value="ALL" />
		<appender-ref ref="errAppender" />
	</logger>
	<!--调试-->
	<logger name="log_test">
		<level value="ALL" />
		<appender-ref ref="testAppender" />
	</logger>
	<!--数据库-->
	<logger name="log_db">
		<level value="ALL" />
		<appender-ref ref="dbAppender" />
	</logger>
	
	<!--接口-->
	<logger name="log_api">
		<level value="ALL" />
		<appender-ref ref="mesAppender" />
	</logger>


	<appender name="sysAppender" type="log4net.Appender.RollingFileAppender">
		<param name="File" value="Log\\SYS\\"/>
		<param name="AppendToFile" value="true" />
		<param name="MaxSizeRollBackups" value="100" />
		<param name="MaxFileSize" value="10240" />
		<param name="StaticLogFileName" value="false" />
		<param name="DatePattern" value="yyyyMMdd&quot;.log&quot;" />
		<param name="RollingStyle" value="Date" />
		<layout type="log4net.Layout.PatternLayout">
			<param name="ConversionPattern" value="----------%n时间：%d %n级别：%-5level %n线程：[%thread] (%file:%line)%n类：%logger [%property{NDC}] %n%m %n" />
		</layout>
	</appender>
	<appender name="errAppender" type="log4net.Appender.RollingFileAppender">
		<param name="File" value="Log\\ERR\\"/>
		<param name="AppendToFile" value="true" />
		<param name="MaxSizeRollBackups" value="100" />
		<param name="MaxFileSize" value="10240" />
		<param name="StaticLogFileName" value="false" />
		<param name="DatePattern" value="yyyyMMdd&quot;.log&quot;" />
		<param name="RollingStyle" value="Date" />
		<layout type="log4net.Layout.PatternLayout">
			<param name="ConversionPattern" value="----------%n时间：%d %n级别：%-5level %n线程：[%thread] (%file:%line)%n类：%logger [%property{NDC}] %n%m %n" />
		</layout>
	</appender>
	<appender name="testAppender" type="log4net.Appender.RollingFileAppender">
		<param name="File" value="Log\\TEST\\"/>
		<param name="AppendToFile" value="true" />
		<param name="MaxSizeRollBackups" value="100" />
		<param name="MaxFileSize" value="10240" />
		<param name="StaticLogFileName" value="false" />
		<param name="DatePattern" value="yyyyMMdd&quot;.log&quot;" />
		<param name="RollingStyle" value="Date" />
		<layout type="log4net.Layout.PatternLayout">
			<param name="ConversionPattern" value="----------%n时间：%d %n级别：%-5level %n线程：[%thread] (%file:%line)%n类：%logger [%property{NDC}] %n%m %n" />
		</layout>
	</appender>
	<appender name="dbAppender" type="log4net.Appender.RollingFileAppender">
		<param name="File" value="Log\\DB\\"/>
		<param name="AppendToFile" value="true" />
		<param name="MaxSizeRollBackups" value="100" />
		<param name="MaxFileSize" value="10240" />
		<param name="StaticLogFileName" value="false" />
		<param name="DatePattern" value="yyyyMMdd&quot;.log&quot;" />
		<param name="RollingStyle" value="Date" />
		<layout type="log4net.Layout.PatternLayout">
			<param name="ConversionPattern" value="----------%n时间：%d %n级别：%-5level %n线程：[%thread] (%file:%line)%n类：%logger [%property{NDC}] %n%m %n" />
		</layout>
	</appender>


	<appender name="mesAppender" type="log4net.Appender.RollingFileAppender">
		<param name="File" value="Log\\API\\"/>
		<param name="AppendToFile" value="true" />
		<param name="MaxSizeRollBackups" value="100" />
		<param name="MaxFileSize" value="10240" />
		<param name="StaticLogFileName" value="false" />
		<param name="DatePattern" value="yyyyMMdd&quot;.log&quot;" />
		<param name="RollingStyle" value="Date" />
		<layout type="log4net.Layout.PatternLayout">
			<param name="ConversionPattern" value="----------%n时间：%d %n级别：%-5level %n线程：[%thread] (%file:%line)%n类：%logger [%property{NDC}] %n%m %n" />
		</layout>
	</appender>
</log4net>